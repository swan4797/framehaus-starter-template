---
interface Props {
  headline: string;
  description: string;
  ctaText: string;
  ctaLink: string;
  backgroundImage: string;
  phoneNumber?: string;
  overlayOpacity?: number;
}

const {
  headline,
  description,
  ctaText,
  ctaLink,
  backgroundImage,
  phoneNumber,
  overlayOpacity = 0.4,
} = Astro.props;
---

<section class="hero">
  <div class="hero-background">
    <img src={backgroundImage} alt="" class="hero-image" />
    <div class="hero-overlay" style={`opacity: ${overlayOpacity}`}></div>
  </div>

  <div class="hero-content">
    <h1 class="hero-headline">{headline}</h1>
    <p class="hero-description">{description}</p>
    <a href={ctaLink} class="hero-cta">{ctaText}</a>
  </div>

  {
    phoneNumber && (
      <a href={`tel:${phoneNumber.replace(/\D/g, '')}`} class="hero-phone">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
        </svg>
        <span>{phoneNumber}</span>
      </a>
    )
  }
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.5) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 900px;
    padding: 2rem;
    text-align: left;
  }

  .hero-headline {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 300;
    color: white;
    margin: 0 0 1.5rem 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: rgba(255, 255, 255, 0.95);
    margin: 0 0 2.5rem 0;
    line-height: 1.7;
    max-width: 700px;
    font-weight: 300;
  }

  .hero-cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-size: 1rem;
    color: white;
    background: transparent;
    border: 2px solid white;
    text-decoration: none;
    transition: all 0.3s ease;
    text-transform: capitalize;
    letter-spacing: 0.05em;
    font-weight: 400;
  }

  .hero-cta:hover {
    background: white;
    color: #1a1a1a;
    transform: translateY(-2px);
  }

  .hero-phone {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    z-index: 3;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    text-decoration: none;
    font-size: 1.1rem;
    transition: opacity 0.3s ease;
    font-weight: 400;
  }

  .hero-phone:hover {
    opacity: 0.8;
  }

  .hero-phone svg {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 1.5rem;
    }

    .hero-headline {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .hero-phone {
      bottom: 1.5rem;
      right: 1.5rem;
      font-size: 1rem;
    }
  }
</style>