---
// ========================================
// HERO COMPONENT
// Reusable hero section with text content and image grid
// ========================================

interface HeroImage {
  src: string
  alt: string
}

interface Props {
  headline: string
  description: string
  ctaText?: string
  ctaLink?: string
  images?: HeroImage[]
}

const {
  headline,
  description,
  ctaText = 'Start your search',
  ctaLink = '/search',
  images = [],
} = Astro.props
---

<section class="hero">
  <div class="hero__container">
    <!-- Left: Text + CTA -->
    <div class="hero__content">
      <h1 class="hero__headline">
        {headline}
      </h1>
      <p class="hero__description">
        {description}
      </p>
      <a href={ctaLink} class="hero__cta">
        {ctaText}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    <!-- Right: Image Grid (2x2) -->
    {images.length > 0 && (
      <div class="hero__images">
        {images.map((image, index) => (
          <div class="hero__image-item" style={`animation-delay: ${0.1 + (index * 0.1)}s`}>
            <img src={image.src} alt={image.alt} loading={index < 2 ? "eager" : "lazy"} />
          </div>
        ))}
      </div>
    )}
  </div>
</section>

<style lang="scss">
  @use '../styles/components/hero';
</style>
