---
interface PropertyImage {
  src: string;
  alt: string;
}

interface Props {
  headline: string;
  description: string;
  ctaText: string;
  ctaLink: string;
  propertyImages: PropertyImage[];
  backgroundColor?: string;
}

const {
  headline,
  description,
  ctaText,
  ctaLink,
  propertyImages,
  backgroundColor = '#f5f5f5',
} = Astro.props;
---
<section class="hero__landing" style={`background-color: ${backgroundColor}`}>
  <div class="hero__container">
    <div class="hero__copy">
      <div class="text_animate_wrapper">
        <h1 class="hero_headline slide_up" style="animation-delay: 0.3s;">The prefab home</h1>
      </div>
      <div class="text_animate_wrapper">
        <h1 class="hero_headline slide_up" style="animation-delay: 0.5s;">of your dreams</h1>
      </div>
      <div class="text_animate_wrapper">
        <h1 class="hero_headline slide_up" style="animation-delay: 0.7s;">is here</h1>
      </div>
      <div class="text_animate_wrapper">
        <p class="hero_description slide_up" style="animation-delay: 0.6s;">{description}</p>
      </div>
      <div class="cta_animate_wrapper">
        <a href={ctaLink} class="hero_cta slide_up" style="animation-delay: 0.9s;">{ctaText}</a>
      </div>
    </div>

    <div class="hero_showcase">
      <div class="showcase_grid">
        {
          propertyImages.slice(0, 4).map((image, index) => (
            <div class="showcase_item" style={`animation-delay: ${1.2 + (index * 0.15)}s`}>
              <img src={image.src} alt={image.alt} />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  // Brand colors
  $primary: #3c5b4b;
  $secondary: #f6f4f4;
  $text_dark: #1a1a1a;
  $text_gray: #666;

  .hero {
    width: 100%;
    padding: 4rem 2rem 6rem;
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;

    &_container {
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
      display: grid;
      grid-template-columns: 1fr 1.2fr;
      gap: 4rem;
      align-items: center;
    }

    &_content {
      padding-right: 2rem;
    }

    &_headline {
      font-size: clamp(2.5rem, 5vw, 4.5rem);
      font-weight: 600;
      color: $text_dark;
      margin: 0 0 1.5rem 0;
      line-height: 1.1;
      letter-spacing: -0.02em;
    }

    &_description {
      font-size: clamp(1.1rem, 1.5vw, 1.3rem);
      color: $text_gray;
      margin: 0 0 2.5rem 0;
      line-height: 1.6;
      font-weight: 400;
    }

    &_cta {
      display: inline-block;
      padding: 1rem 2.5rem;
      font-size: 1.05rem;
      color: white;
      background: $text_dark;
      border: none;
      text-decoration: none;
      transition: all 0.3s ease;
      border-radius: 6px;
      font-weight: 500;

      &:hover {
        background: #333;
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
      }
    }

    &_showcase {
      width: 100%;
      max-width: 800px;
    }
  }

  .showcase {
    &_grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
      width: 100%;
    }

    &_item {
      position: relative;
      aspect-ratio: 4 / 3;
      overflow: hidden;
      border-radius: 12px;
      background: #e0e0e0;
      opacity: 0;
      animation: fade_in 0.8s ease forwards;

      &:nth-child(1) {
        grid-column: 1;
        grid-row: 1;
      }

      &:nth-child(2) {
        grid-column: 2;
        grid-row: 1;
      }

      &:nth-child(3) {
        grid-column: 1;
        grid-row: 2;
      }

      &:nth-child(4) {
        grid-column: 2;
        grid-row: 2;
      }

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
      }

      &:hover img {
        transform: scale(1.05);
      }
    }
  }

  // Animation wrappers
  .text_animate_wrapper,
  .cta_animate_wrapper {
    overflow: hidden;
  }

  // Slide up animation with domino effect
  .slide_up {
    animation: slide_up 0.85s cubic-bezier(0.65, 0, 0.35, 1) both;
    opacity: 0;
  }

  @keyframes slide_up {
    0% {
      transform: translateY(100%);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes fade_in {
    0% {
      opacity: 0;
      transform: scale(0.95);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media (max-width: 1024px) {
    .hero {
      &_container {
        grid-template-columns: 1fr;
        gap: 3rem;
      }

      &_content {
        padding-right: 0;
        text-align: center;
      }

      &_showcase {
        max-width: 600px;
        margin: 0 auto;
      }
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: 2rem 1.5rem 4rem;

      &_headline {
        font-size: 2rem;
      }

      &_description {
        font-size: 1rem;
      }
    }

    .showcase {
      &_grid {
        grid-template-columns: 1fr;
        gap: 0.75rem;
      }

      &_item {
        aspect-ratio: 16 / 10;

        &:nth-child(n) {
          grid-column: 1;
          grid-row: auto;
        }
      }
    }
  }
</style>