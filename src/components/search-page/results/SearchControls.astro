---
// ========================================
// SEARCH CONTROLS
// Sort dropdown, filters badge, and map link
// ========================================

import type { SearchControlsProps } from '../types'
import SearchSort from './SearchSort.astro'

interface Props extends SearchControlsProps {
  class?: string
}

const {
  activeFiltersCount,
  currentSortBy,
  sortOptions,
  showMapLink = true,
  mapLinkHref = '/search-map',
  class: className = '',
} = Astro.props
---

<div class:list={['search-controls', className]}>
  {activeFiltersCount > 0 && (
    <div class="search-controls__filters-badge">
      <svg class="search-controls__badge-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
      </svg>
      <span>{activeFiltersCount} active</span>
    </div>
  )}

  <SearchSort
    currentSortBy={currentSortBy}
    options={sortOptions}
  />

  {showMapLink && (
    <a href={mapLinkHref} class="search-controls__map-link">
      <svg class="search-controls__map-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polygon points="3 6 9 3 15 6 21 3 21 18 15 21 9 18 3 21"></polygon>
        <line x1="9" y1="3" x2="9" y2="18"></line>
        <line x1="15" y1="6" x2="15" y2="21"></line>
      </svg>
      <span>Map View</span>
    </a>
  )}
</div>

<style lang="scss">
  @use '../../../styles/variables' as *;
  @use '../../../styles/mixins' as *;

  .search-controls {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    width: 100%;
    gap: $spacing-4;

    @include sm {
      flex-direction: row;
      align-items: center;
      width: auto;
    }
  }

  .search-controls__filters-badge {
    display: flex;
    align-items: center;
    gap: $spacing-2;
    padding: $spacing-2 $spacing-4;
    background: $accent-coral;
    color: $bg-white;
    border-radius: 999px;
    font-size: $font-size-sm;
    font-weight: $font-weight-semibold;
  }

  .search-controls__badge-icon {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
  }

  .search-controls__map-link {
    display: inline-flex;
    align-items: center;
    gap: $spacing-2;
    padding: $spacing-2 $spacing-4;
    background: $bg-white;
    border: 1px solid $border-light;
    border-radius: $radius-md;
    font-size: $font-size-sm;
    font-weight: $font-weight-medium;
    color: $text-primary;
    text-decoration: none;
    transition: border-color $transition-fast, background $transition-fast, color $transition-fast;
    white-space: nowrap;

    &:hover {
      border-color: $accent-coral;
      color: $accent-coral;
      background: rgba($accent-coral, 0.04);
    }

    &:focus {
      outline: none;
      border-color: $accent-coral;
      box-shadow: 0 0 0 3px rgba($accent-coral, 0.1);
    }
  }

  .search-controls__map-icon {
    flex-shrink: 0;
    color: currentColor;
  }
</style>
