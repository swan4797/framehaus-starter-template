---
// ========================================
// SELECT COMPONENT
// Reusable select dropdown with label
// ========================================

export interface SelectOption {
  value: string
  label: string
  disabled?: boolean
}

export interface Props {
  name: string
  id?: string
  label?: string
  placeholder?: string
  options: SelectOption[]
  value?: string
  required?: boolean
  disabled?: boolean
  error?: string
  hint?: string
  size?: 'sm' | 'md' | 'lg'
  class?: string
  selectClass?: string
  [key: string]: any
}

const {
  name,
  id = name,
  label,
  placeholder,
  options,
  value,
  required = false,
  disabled = false,
  error,
  hint,
  size = 'md',
  class: className,
  selectClass,
  ...rest
} = Astro.props

const hasError = Boolean(error)
const describedBy = [
  error && `${id}-error`,
  hint && `${id}-hint`,
].filter(Boolean).join(' ') || undefined
---

<div class:list={['select-group', `select-group--${size}`, hasError && 'select-group--error', className]}>
  {label && (
    <label for={id} class="select-group__label">
      {label}
      {required && <span class="select-group__required" aria-hidden="true">*</span>}
    </label>
  )}

  <div class="select-group__wrapper">
    <select
      id={id}
      name={name}
      required={required}
      disabled={disabled}
      aria-invalid={hasError}
      aria-describedby={describedBy}
      class:list={['select-group__select', selectClass]}
      {...rest}
    >
      {placeholder && (
        <option value="" disabled selected={!value}>{placeholder}</option>
      )}
      {options.map((option) => (
        <option
          value={option.value}
          disabled={option.disabled}
          selected={value === option.value}
        >
          {option.label}
        </option>
      ))}
    </select>

    <svg class="select-group__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
    </svg>
  </div>

  {hint && !error && (
    <p id={`${id}-hint`} class="select-group__hint">{hint}</p>
  )}

  {error && (
    <p id={`${id}-error`} class="select-group__error" role="alert">{error}</p>
  )}
</div>

<style lang="scss">
  @use '../../styles/variables' as *;

  .select-group {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    width: 100%;
  }

  // ----------------------------------------
  // LABEL
  // ----------------------------------------

  .select-group__label {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-primary);
  }

  .select-group__required {
    color: var(--color-primary);
  }

  // ----------------------------------------
  // WRAPPER
  // ----------------------------------------

  .select-group__wrapper {
    position: relative;
    width: 100%;
  }

  // ----------------------------------------
  // SELECT
  // ----------------------------------------

  .select-group__select {
    width: 100%;
    font-family: var(--font-family-body);
    color: var(--color-text-primary);
    background-color: var(--color-bg-primary);
    border: 1.5px solid var(--color-border-light);
    border-radius: var(--radius-md);
    cursor: pointer;
    appearance: none;
    padding-right: 2.5rem;
    transition:
      border-color var(--transition-fast),
      box-shadow var(--transition-fast);

    &:hover:not(:disabled):not(:focus) {
      border-color: var(--color-border-medium);
    }

    &:focus {
      outline: none;
      border-color: var(--color-primary);
      box-shadow: 0 0 0 3px var(--color-primary-light);
    }

    &:disabled {
      background-color: var(--color-bg-secondary);
      cursor: not-allowed;
      opacity: 0.6;
    }

    // Style placeholder option differently
    &:has(option[value=""]:checked) {
      color: var(--color-text-muted);
    }
  }

  // ----------------------------------------
  // ICON
  // ----------------------------------------

  .select-group__icon {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1.25rem;
    height: 1.25rem;
    color: var(--color-text-muted);
    pointer-events: none;
    transition: color var(--transition-fast);

    .select-group__select:focus + & {
      color: var(--color-primary);
    }
  }

  // ----------------------------------------
  // SIZES
  // ----------------------------------------

  .select-group--sm .select-group__select {
    padding: 0.375rem 2.25rem 0.375rem 0.75rem;
    font-size: 0.8125rem;
    height: 2rem;
  }

  .select-group--sm .select-group__icon {
    width: 1rem;
    height: 1rem;
    right: 0.5rem;
  }

  .select-group--md .select-group__select {
    padding: 0.625rem 2.5rem 0.625rem 1rem;
    font-size: 0.9375rem;
    height: 2.5rem;
  }

  .select-group--lg .select-group__select {
    padding: 0.75rem 2.75rem 0.75rem 1.25rem;
    font-size: 1rem;
    height: 3rem;
  }

  .select-group--lg .select-group__icon {
    width: 1.5rem;
    height: 1.5rem;
    right: 1rem;
  }

  // ----------------------------------------
  // ERROR STATE
  // ----------------------------------------

  .select-group--error .select-group__select {
    border-color: #DC2626;

    &:focus {
      border-color: #DC2626;
      box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.15);
    }
  }

  // ----------------------------------------
  // HINT & ERROR TEXT
  // ----------------------------------------

  .select-group__hint {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .select-group__error {
    font-size: 0.8125rem;
    color: #DC2626;
    margin: 0;
  }
</style>
