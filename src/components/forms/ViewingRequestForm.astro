---
// ========================================
// VIEWING REQUEST FORM COMPONENT
// Contact form for requesting property viewings
// Aligned with site theme and design system
// ========================================

import type { Property } from '../../types/database'

interface Props {
  property: Property
}

const { property } = Astro.props
---

<div class="viewing-form">
  <div class="viewing-form__card">
    <!-- Header -->
    <div class="viewing-form__header">
      <div class="viewing-form__header-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="18" height="18" x="3" y="4" rx="2" ry="2"/>
          <line x1="16" x2="16" y1="2" y2="6"/>
          <line x1="8" x2="8" y1="2" y2="6"/>
          <line x1="3" x2="21" y1="10" y2="10"/>
        </svg>
      </div>
      <div class="viewing-form__header-content">
        <h3 class="viewing-form__title">Request a Viewing</h3>
        <p class="viewing-form__subtitle">{property.display_address}</p>
      </div>
    </div>

    <!-- Form -->
    <form id="viewing-form" class="viewing-form__body">
      <!-- Honeypot field for bot protection -->
      <input type="text" name="website" style="display:none" tabindex="-1" autocomplete="off" />

      <!-- Name Field -->
      <div class="viewing-form__field">
        <label for="name" class="viewing-form__label">
          Full Name
          <span class="viewing-form__required">*</span>
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          placeholder="Your full name"
          class="viewing-form__input"
        />
      </div>

      <!-- Email & Phone Row -->
      <div class="viewing-form__row">
        <div class="viewing-form__field">
          <label for="email" class="viewing-form__label">
            Email
            <span class="viewing-form__required">*</span>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="you@example.com"
            class="viewing-form__input"
          />
        </div>

        <div class="viewing-form__field">
          <label for="phone" class="viewing-form__label">
            Phone
            <span class="viewing-form__required">*</span>
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            required
            placeholder="07XXX XXXXXX"
            class="viewing-form__input"
          />
        </div>
      </div>

      <!-- Date Selection -->
      <div class="viewing-form__field">
        <label for="preferred_date" class="viewing-form__label">Preferred Date</label>
        <div class="viewing-form__date-wrapper">
          <input
            type="text"
            id="preferred_date"
            name="preferred_date"
            placeholder="Select a date"
            class="viewing-form__input viewing-form__input--date"
            readonly
          />
          <svg class="viewing-form__date-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="18" height="18" x="3" y="4" rx="2" ry="2"/>
            <line x1="16" x2="16" y1="2" y2="6"/>
            <line x1="8" x2="8" y1="2" y2="6"/>
            <line x1="3" x2="21" y1="10" y2="10"/>
          </svg>
        </div>
      </div>

      <!-- Time Selection -->
      <div class="viewing-form__field">
        <label class="viewing-form__label">Preferred Time</label>
        <input type="hidden" id="preferred_time" name="preferred_time" value="" />
        <div class="viewing-form__time-picker">
          <button type="button" class="viewing-form__time-option is-selected" data-value="">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            <span class="viewing-form__time-label">Flexible</span>
          </button>
          <button type="button" class="viewing-form__time-option" data-value="morning">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="4"/>
              <path d="M12 2v2"/>
              <path d="M12 20v2"/>
              <path d="m4.93 4.93 1.41 1.41"/>
              <path d="m17.66 17.66 1.41 1.41"/>
              <path d="M2 12h2"/>
              <path d="M20 12h2"/>
              <path d="m6.34 17.66-1.41 1.41"/>
              <path d="m19.07 4.93-1.41 1.41"/>
            </svg>
            <span class="viewing-form__time-label">Morning</span>
            <span class="viewing-form__time-range">9am - 12pm</span>
          </button>
          <button type="button" class="viewing-form__time-option" data-value="afternoon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="4"/>
              <path d="M12 4v2"/>
              <path d="M12 18v2"/>
              <path d="m6.34 6.34-1.41-1.41"/>
              <path d="m17.66 17.66 1.41 1.41"/>
              <path d="M4 12H2"/>
              <path d="M22 12h-2"/>
            </svg>
            <span class="viewing-form__time-label">Afternoon</span>
            <span class="viewing-form__time-range">12pm - 5pm</span>
          </button>
          <button type="button" class="viewing-form__time-option" data-value="evening">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/>
            </svg>
            <span class="viewing-form__time-label">Evening</span>
            <span class="viewing-form__time-range">5pm - 7pm</span>
          </button>
        </div>
      </div>

      <!-- Message Field -->
      <div class="viewing-form__field">
        <label for="message" class="viewing-form__label">Additional Information</label>
        <textarea
          id="message"
          name="message"
          placeholder="Any questions or special requirements for your viewing?"
          rows="3"
          class="viewing-form__textarea"
        ></textarea>
      </div>

      <!-- Marketing Opt-in -->
      <div class="viewing-form__checkbox">
        <input
          type="checkbox"
          id="marketing_opt_in"
          name="marketing_opt_in"
          class="viewing-form__checkbox-input"
        />
        <label for="marketing_opt_in" class="viewing-form__checkbox-label">
          Keep me updated with similar properties and market news
        </label>
      </div>

      <input type="hidden" name="property_id" value={property.id} />

      <!-- Submit Button -->
      <button type="submit" class="viewing-form__submit">
        <span>Request Viewing</span>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" x2="19" y1="12" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </button>

      <!-- Privacy Notice -->
      <p class="viewing-form__privacy">
        By submitting, you agree to our <a href="/privacy">privacy policy</a>. We'll never share your data.
      </p>
    </form>

    <!-- Success Message -->
    <div id="success-message" class="viewing-form__message viewing-form__message--success">
      <div class="viewing-form__message-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      </div>
      <div class="viewing-form__message-content">
        <p class="viewing-form__message-title">Viewing Request Sent!</p>
        <p class="viewing-form__message-text">We'll be in touch shortly to confirm your appointment.</p>
      </div>
    </div>

    <!-- Error Message -->
    <div id="error-message" class="viewing-form__message viewing-form__message--error">
      <div class="viewing-form__message-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" x2="12" y1="8" y2="12"></line>
          <line x1="12" x2="12.01" y1="16" y2="16"></line>
        </svg>
      </div>
      <div class="viewing-form__message-content">
        <p class="viewing-form__message-title">Something went wrong</p>
        <p class="viewing-form__message-text">Please try again or call us directly.</p>
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  @use '../../styles/forms/viewing-request-form';
</style>

<style is:global>
  @import 'flatpickr/dist/flatpickr.min.css';

  /* Flatpickr Input Styling - Match contact form theme */
  .viewing-form .flatpickr-input, .viewing-form__input--date {
    width: 100%;
    height: 50px;
    padding: 0 44px 0 16px;
    font-family: var(--font-family-base, system-ui, sans-serif);
    font-size: 16px;
    color: var(--color-text-primary, #1a1a1a);
    background: #F5F5F5;
    border: none;
    border-radius: 10px;
    transition: background 0.15s ease, box-shadow 0.15s ease;
    cursor: pointer;
  }

  .viewing-form .flatpickr-input::placeholder {
    color: var(--color-text-muted, #999);
  }

  .viewing-form .flatpickr-input:hover {
    background: #EFEFEF;
  }

  .viewing-form .flatpickr-input:focus,
  .viewing-form .flatpickr-input.active {
    outline: none;
    background: #fff;
    box-shadow: 0 0 0 2px var(--color-accent-coral, #E07A5F);
  }

  /* Hide the original input when flatpickr creates altInput */
  .viewing-form input[type="text"].flatpickr-input + input {
    display: none;
  }

  /* Flatpickr Calendar Popup */
  .flatpickr-calendar {
    font-family: var(--font-family-base, system-ui, sans-serif);
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
    border: 1px solid var(--color-border-light, #e5e5e5);
    padding: 8px;
    width: 307px;
  }

  .flatpickr-months {
    padding: 8px 4px;
  }

  .flatpickr-months .flatpickr-month {
    height: 36px;
  }

  .flatpickr-current-month {
    font-size: 15px;
    font-weight: 600;
    color: var(--color-text-primary, #1a1a1a);
  }

  .flatpickr-current-month .flatpickr-monthDropdown-months {
    font-weight: 600;
  }

  .flatpickr-months .flatpickr-prev-month,
  .flatpickr-months .flatpickr-next-month {
    padding: 8px;
    border-radius: 50%;
    transition: background 0.15s ease;
  }

  .flatpickr-months .flatpickr-prev-month:hover,
  .flatpickr-months .flatpickr-next-month:hover {
    background: #F5F5F5;
  }

  .flatpickr-months .flatpickr-prev-month svg,
  .flatpickr-months .flatpickr-next-month svg {
    fill: var(--color-text-secondary, #666);
  }

  .flatpickr-weekdays {
    padding: 0 4px;
  }

  span.flatpickr-weekday {
    font-size: 12px;
    font-weight: 500;
    color: var(--color-text-muted, #999);
  }

  .flatpickr-days {
    padding: 0 4px 4px;
  }

  .dayContainer {
    gap: 2px;
  }

  .flatpickr-day {
    font-size: 14px;
    font-weight: 500;
    color: var(--color-text-primary, #1a1a1a);
    border-radius: 50%;
    border: none;
    max-width: 38px;
    height: 38px;
    line-height: 38px;
    transition: all 0.15s ease;
  }

  .flatpickr-day:hover {
    background: #F5F5F5;
    border: none;
  }

  .flatpickr-day.today {
    border: none;
    background: transparent;
    color: var(--color-accent-coral, #E07A5F);
    font-weight: 700;
  }

  .flatpickr-day.today:hover {
    background: #F5F5F5;
    color: var(--color-accent-coral, #E07A5F);
  }

  .flatpickr-day.selected,
  .flatpickr-day.selected:hover {
    background: var(--color-accent-coral, #E07A5F);
    border: none;
    color: #fff;
    font-weight: 600;
  }

  .flatpickr-day.flatpickr-disabled,
  .flatpickr-day.flatpickr-disabled:hover {
    color: #ccc;
    background: transparent;
    cursor: not-allowed;
  }

  .flatpickr-day.prevMonthDay,
  .flatpickr-day.nextMonthDay {
    color: #ccc;
  }

  /* Mobile styles */
  .flatpickr-calendar.open {
    z-index: 1000;
  }

  @media (max-width: 480px) {
    .flatpickr-calendar {
      width: calc(100vw - 32px);
      max-width: 320px;
    }
  }
</style>

<script>
  import { getSessionId } from '../../lib/session';

  const form = document.querySelector('#viewing-form') as HTMLFormElement;
  const successMessage = document.querySelector('#success-message') as HTMLElement;
  const errorMessage = document.querySelector('#error-message') as HTMLElement;
  const submitButton = form?.querySelector('button[type="submit"]') as HTMLButtonElement;

  // Track when user starts filling the form
  let formStarted = false;

  const trackFormStart = async () => {
    if (formStarted) return;
    formStarted = true;

    const sessionId = getSessionId();
    const propertyId = (form.querySelector('[name="property_id"]') as HTMLInputElement)?.value;

    try {
      await fetch(
        `${import.meta.env.PUBLIC_SUPABASE_URL}/functions/v1/track-event`,
        {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'x-api-key': import.meta.env.PUBLIC_WEBSITE_API_KEY,
          },
          body: JSON.stringify({
            session_id: sessionId,
            event_type: 'enquiry_started',
            property_id: propertyId,
            event_data: {
              enquiry_type: 'viewing_request',
              form_type: 'viewing_request'
            }
          }),
        }
      );
    } catch (error) {
      console.error('Failed to track form start:', error);
    }
  };

  // Add event listeners to track form interaction
  form?.querySelectorAll('input, textarea, select').forEach(element => {
    element.addEventListener('focus', trackFormStart, { once: true });
  });

  // Time picker functionality
  const timeOptions = document.querySelectorAll('.viewing-form__time-option');
  const timeInput = document.querySelector('#preferred_time') as HTMLInputElement;

  timeOptions.forEach(option => {
    option.addEventListener('click', () => {
      // Track form start on first interaction
      trackFormStart();

      // Remove selected class from all options
      timeOptions.forEach(opt => opt.classList.remove('is-selected'));

      // Add selected class to clicked option
      option.classList.add('is-selected');

      // Update hidden input value
      if (timeInput) {
        timeInput.value = (option as HTMLElement).dataset.value || '';
      }
    });
  });

  // Flatpickr date picker
  import flatpickr from 'flatpickr';

  const dateInput = document.querySelector('#preferred_date') as HTMLInputElement;

  if (dateInput) {
    flatpickr(dateInput, {
      dateFormat: 'D, d M Y',
      altInput: true,
      altFormat: 'D, d M Y',
      minDate: 'today',
      disableMobile: false,
      animate: true,
      onChange: () => {
        trackFormStart();
      },
    });
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    if (!submitButton) return;

    const formData = new FormData(e.target as HTMLFormElement);
    const sessionId = getSessionId();
    const propertyId = formData.get('property_id') as string;

    // Show loading state
    submitButton.disabled = true;
    const originalContent = submitButton.innerHTML;
    submitButton.innerHTML = `
      <svg class="animate-spin" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 12a9 9 0 1 1-6.219-8.56"/>
      </svg>
      <span>Sending...</span>
    `;

    try {
      // Build message with viewing preferences
      let message = formData.get('message') as string || '';
      const preferredDate = formData.get('preferred_date') as string;
      const preferredTime = formData.get('preferred_time') as string;

      if (preferredDate || preferredTime) {
        const preferences = [];
        if (preferredDate) {
          const date = new Date(preferredDate);
          preferences.push(`Preferred date: ${date.toLocaleDateString('en-GB', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}`);
        }
        if (preferredTime) {
          const timeLabels: Record<string, string> = {
            'morning': 'Morning (9am - 12pm)',
            'afternoon': 'Afternoon (12pm - 5pm)',
            'evening': 'Evening (5pm - 7pm)'
          };
          preferences.push(`Preferred time: ${timeLabels[preferredTime] || preferredTime}`);
        }

        const preferencesText = preferences.join('\n');
        message = message ? `${preferencesText}\n\nAdditional information:\n${message}` : preferencesText;
      }

      const response = await fetch(
        `${import.meta.env.PUBLIC_SUPABASE_URL}/functions/v1/submit-enquiry`,
        {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'x-api-key': import.meta.env.PUBLIC_WEBSITE_API_KEY,
          },
          body: JSON.stringify({
            session_id: sessionId,
            contact_name: formData.get('name'),
            contact_email: formData.get('email'),
            contact_phone: formData.get('phone'),
            message: message,
            property_id: propertyId,
            enquiry_type: 'viewing_request',
            marketing_opt_in: formData.get('marketing_opt_in') === 'on',
            honeypot: formData.get('website'), // Bot detection
          }),
        }
      );

      const result = await response.json();

      if (result.success) {
        // Hide form and show success message
        form.style.display = 'none';
        successMessage.classList.add('show');

        // Track successful submission
        try {
          await fetch(
            `${import.meta.env.PUBLIC_SUPABASE_URL}/functions/v1/track-event`,
            {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'x-api-key': import.meta.env.PUBLIC_WEBSITE_API_KEY,
              },
              body: JSON.stringify({
                session_id: sessionId,
                event_type: 'enquiry_submitted',
                property_id: propertyId,
                event_data: {
                  enquiry_type: 'viewing_request',
                  enquiry_id: result.data.enquiry_id,
                  lead_score: result.data.lead_score,
                  priority: result.data.priority
                }
              }),
            }
          );
        } catch (trackError) {
          console.error('Failed to track submission:', trackError);
        }
      } else {
        throw new Error(result.message || 'Submission failed');
      }
    } catch (error) {
      console.error('Error submitting form:', error);
      errorMessage.classList.add('show');

      // Hide error message after 5 seconds
      setTimeout(() => {
        errorMessage.classList.remove('show');
      }, 5000);
    } finally {
      submitButton.disabled = false;
      submitButton.innerHTML = originalContent;
    }
  });
</script>

<style is:global>
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin {
    animation: spin 1s linear infinite;
  }
</style>
