---
// ========================================
// PAGINATION COMPONENT
// Page navigation for search results
// ========================================

import { buildSearchUrl } from '../../lib/utils'
import type { PropertySearchParams } from '../../types/database'

interface Props {
  currentPage: number
  totalPages: number
  totalResults: number
  searchParams: PropertySearchParams
}

const { currentPage, totalPages, totalResults, searchParams } = Astro.props

// Generate page URLs
function getPageUrl(page: number): string {
  return buildSearchUrl({ ...searchParams, page })
}

// Calculate page range to show
const maxPagesToShow = 7
let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2))
let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1)

// Adjust if we're near the end
if (endPage - startPage < maxPagesToShow - 1) {
  startPage = Math.max(1, endPage - maxPagesToShow + 1)
}

const pages = Array.from(
  { length: endPage - startPage + 1 },
  (_, i) => startPage + i
)

const hasNext = currentPage < totalPages
const hasPrev = currentPage > 1
---

{totalPages > 1 && (
  <nav class="flex items-center justify-between border-t border-gray-200 px-4 sm:px-0">
    <!-- Mobile View -->
    <div class="flex w-0 flex-1 -mt-px md:hidden">
      {hasPrev && (
        <a
          href={getPageUrl(currentPage - 1)}
          class="inline-flex items-center border-t-2 border-transparent pr-1 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
        >
          <svg class="mr-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
          </svg>
          Previous
        </a>
      )}
    </div>

    <!-- Desktop View -->
    <div class="hidden md:flex md:flex-1 md:items-center md:justify-between mt-4">
      <!-- Results Info -->
      <div>
        <p class="text-sm text-gray-700">
          Showing
          <span class="font-medium">{(currentPage - 1) * (searchParams.limit || 20) + 1}</span>
          to
          <span class="font-medium">
            {Math.min(currentPage * (searchParams.limit || 20), totalResults)}
          </span>
          of
          <span class="font-medium">{totalResults}</span>
          results
        </p>
      </div>

      <!-- Page Numbers -->
      <div class="flex gap-1">
        <!-- Previous -->
        {hasPrev ? (
          <a
            href={getPageUrl(currentPage - 1)}
            class="relative inline-flex items-center rounded-l-md px-3 py-2 text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20"
          >
            <span class="sr-only">Previous</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
            </svg>
          </a>
        ) : (
          <span class="relative inline-flex items-center rounded-l-md px-3 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 cursor-not-allowed">
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
            </svg>
          </span>
        )}

        <!-- First page if not in range -->
        {startPage > 1 && (
          <>
            <a
              href={getPageUrl(1)}
              class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            >
              1
            </a>
            {startPage > 2 && (
              <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300">
                ...
              </span>
            )}
          </>
        )}

        <!-- Page numbers -->
        {pages.map(page => (
          page === currentPage ? (
            <span
              class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-white bg-blue-600 ring-1 ring-inset ring-blue-600"
            >
              {page}
            </span>
          ) : (
            <a
              href={getPageUrl(page)}
              class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            >
              {page}
            </a>
          )
        ))}

        <!-- Last page if not in range -->
        {endPage < totalPages && (
          <>
            {endPage < totalPages - 1 && (
              <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300">
                ...
              </span>
            )}
            <a
              href={getPageUrl(totalPages)}
              class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            >
              {totalPages}
            </a>
          </>
        )}

        <!-- Next -->
        {hasNext ? (
          <a
            href={getPageUrl(currentPage + 1)}
            class="relative inline-flex items-center rounded-r-md px-3 py-2 text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
          >
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
          </a>
        ) : (
          <span class="relative inline-flex items-center rounded-r-md px-3 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 cursor-not-allowed">
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
          </span>
        )}
      </div>
    </div>

    <!-- Mobile View - Next -->
    <div class="flex w-0 flex-1 justify-end -mt-px md:hidden">
      {hasNext && (
        <a
          href={getPageUrl(currentPage + 1)}
          class="inline-flex items-center border-t-2 border-transparent pl-1 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
        >
          Next
          <svg class="ml-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
        </a>
      )}
    </div>
  </nav>
)}