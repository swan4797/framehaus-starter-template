---
interface Props {
  initialValues?: any
}

const { initialValues = {} } = Astro.props
---

<div id="advanced-filters" class="hidden mt-6 p-6 bg-gray-50 rounded-lg border border-gray-200">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Advanced Filters</h3>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Bathrooms -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Bathrooms</label>
      <select
        name="min_bathrooms"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728]"
      >
        <option value="">Any</option>
        <option value="1">1+</option>
        <option value="2">2+</option>
        <option value="3">3+</option>
      </select>
    </div>

    <!-- Receptions -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Reception rooms</label>
      <select
        name="min_receptions"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728]"
      >
        <option value="">Any</option>
        <option value="1">1+</option>
        <option value="2">2+</option>
        <option value="3">3+</option>
      </select>
    </div>

    <!-- Furnishing -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Furnishing</label>
      <select
        name="furnishing"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728]"
      >
        <option value="">Any</option>
        <option value="furnished">Furnished</option>
        <option value="unfurnished">Unfurnished</option>
        <option value="part_furnished">Part Furnished</option>
      </select>
    </div>

    <!-- Tenure -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Tenure</label>
      <select
        name="tenure"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728]"
      >
        <option value="">Any</option>
        <option value="freehold">Freehold</option>
        <option value="leasehold">Leasehold</option>
        <option value="share_of_freehold">Share of Freehold</option>
      </select>
    </div>

    <!-- Parking -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Parking</label>
      <select
        name="parking"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728]"
      >
        <option value="">Any</option>
        <option value="off_street">Off Street</option>
        <option value="garage">Garage</option>
        <option value="allocated">Allocated</option>
      </select>
    </div>

    <!-- EPC Rating -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">EPC Rating</label>
      <select
        name="epc_rating"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728]"
      >
        <option value="">Any</option>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="C">C</option>
        <option value="D">D</option>
      </select>
    </div>
  </div>

  <!-- Boolean filters -->
  <div class="mt-6 flex flex-wrap gap-4">
    <label class="flex items-center gap-2 cursor-pointer">
      <input
        type="checkbox"
        name="garden"
        value="true"
        class="w-5 h-5 text-[#064728] border-gray-300 rounded focus:ring-[#064728]"
      />
      <span class="text-sm font-medium text-gray-700">Garden</span>
    </label>

    <label class="flex items-center gap-2 cursor-pointer">
      <input
        type="checkbox"
        name="new_build"
        value="true"
        class="w-5 h-5 text-[#064728] border-gray-300 rounded focus:ring-[#064728]"
      />
      <span class="text-sm font-medium text-gray-700">New build</span>
    </label>

    <label class="flex items-center gap-2 cursor-pointer">
      <input
        type="checkbox"
        name="shared_ownership"
        value="true"
        class="w-5 h-5 text-[#064728] border-gray-300 rounded focus:ring-[#064728]"
      />
      <span class="text-sm font-medium text-gray-700">Shared ownership</span>
    </label>

    <label class="flex items-center gap-2 cursor-pointer">
      <input
        type="checkbox"
        name="retirement_home"
        value="true"
        class="w-5 h-5 text-[#064728] border-gray-300 rounded focus:ring-[#064728]"
      />
      <span class="text-sm font-medium text-gray-700">Retirement home</span>
    </label>
  </div>
</div>