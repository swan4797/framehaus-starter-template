---
interface Props {
  name: string
  initialValues?: string[]
}

const { name, initialValues = [] } = Astro.props

const propertyTypes = [
  { value: 'house', label: 'House', icon: 'ğŸ ' },
  { value: 'flat', label: 'Flat', icon: 'ğŸ¢' },
  { value: 'bungalow', label: 'Bungalow', icon: 'ğŸ¡' },
  { value: 'maisonette', label: 'Maisonette', icon: 'ğŸ˜ï¸' },
]
---

<div class="relative">
  <button
    type="button"
    id="property-type-btn"
    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-[#064728] focus:ring-4 focus:ring-[#064728]/10 outline-none transition-all text-left flex items-center justify-between"
  >
    <span id="property-type-label" class="text-gray-700">
      {initialValues.length > 0 ? `${initialValues.length} types` : 'Property type'}
    </span>
    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <!-- Dropdown -->
  <div 
    id="property-type-dropdown"
    class="absolute z-50 w-full mt-2 bg-white rounded-lg shadow-lg border border-gray-200 hidden"
  >
    <div class="p-4 space-y-2">
      {propertyTypes.map(type => (
        <label class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg cursor-pointer group">
          <input
            type="checkbox"
            name={name}
            value={type.value}
            checked={initialValues.includes(type.value)}
            class="w-5 h-5 text-[#064728] border-gray-300 rounded focus:ring-[#064728] focus:ring-2"
          />
          <span class="text-2xl">{type.icon}</span>
          <span class="text-gray-700 font-medium group-hover:text-[#064728]">
            {type.label}
          </span>
        </label>
      ))}
    </div>
  </div>
</div>

<script>
  const btn = document.getElementById('property-type-btn')
  const dropdown = document.getElementById('property-type-dropdown')
  const label = document.getElementById('property-type-label')

  btn?.addEventListener('click', () => {
    dropdown?.classList.toggle('hidden')
  })

  // Update label when checkboxes change
  dropdown?.addEventListener('change', () => {
    const checked = dropdown.querySelectorAll('input[type="checkbox"]:checked')
    if (label) {
      label.textContent = checked.length > 0 
        ? `${checked.length} type${checked.length > 1 ? 's' : ''}`
        : 'Property type'
    }
  })

  // Close on click outside
  document.addEventListener('click', (e) => {
    if (!btn?.contains(e.target as Node) && !dropdown?.contains(e.target as Node)) {
      dropdown?.classList.add('hidden')
    }
  })
</script>