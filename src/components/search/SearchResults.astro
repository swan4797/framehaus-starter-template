---
// This component fetches and displays search results
const API_ENDPOINT = import.meta.env.PUBLIC_STRATOS_API_ENDPOINT
const API_KEY = import.meta.env.PUBLIC_STRATOS_API_KEY
const AGENCY_ID = import.meta.env.PUBLIC_AGENCY_ID
---

<div>
  <!-- Results Header -->
  <div id="results-header" class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6 hidden">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h2 class="text-xl font-bold text-gray-900">
          <span id="results-count">0</span> properties found
        </h2>
        <div id="active-filters" class="flex flex-wrap gap-2 mt-2"></div>
      </div>
      
      <div class="flex items-center gap-4">
        <!-- Sort -->
        <div class="flex items-center gap-2">
          <label for="sort" class="text-sm text-gray-600">Sort:</label>
          <select
            id="sort"
            class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728] text-sm"
          >
            <option value="">Recommended</option>
            <option value="price_asc">Price (Low to High)</option>
            <option value="price_desc">Price (High to Low)</option>
            <option value="newest">Newest First</option>
            <option value="bedrooms_desc">Most Bedrooms</option>
          </select>
        </div>

        <!-- View Toggle -->
        <div class="flex border border-gray-300 rounded-lg overflow-hidden">
          <button
            id="grid-view-btn"
            class="px-3 py-2 bg-[#064728] text-white"
            title="Grid view"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
            </svg>
          </button>
          <button
            id="list-view-btn"
            class="px-3 py-2 bg-white text-gray-600 hover:bg-gray-50"
            title="List view"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Loading State -->
  <div id="loading" class="text-center py-12">
    <div class="inline-block h-12 w-12 animate-spin rounded-full border-4 border-solid border-[#064728] border-r-transparent"></div>
    <p class="mt-4 text-gray-600">Searching properties...</p>
  </div>

  <!-- Results Grid -->
  <div id="results-container" class="hidden">
    <div id="properties-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"></div>
  </div>

  <!-- No Results -->
  <div id="no-results" class="hidden bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
    <svg class="h-24 w-24 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
    <h3 class="text-2xl font-bold text-gray-900 mb-2">No properties found</h3>
    <p class="text-gray-600 mb-6">Try adjusting your filters to see more results</p>
    
      href="/properties/search"
      class="inline-flex items-center gap-2 px-6 py-3 bg-[#064728] text-white rounded-lg hover:bg-[#0a5c35] transition-colors"
    >
      Clear all filters
    </a>
  </div>

  <!-- Pagination -->
  <div id="pagination" class="hidden mt-8 flex justify-center">
    <nav class="flex items-center gap-2">
      <button
        id="prev-page"
        class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
        disabled
      >
        Previous
      </button>
      <div id="page-numbers" class="flex gap-2"></div>
      <button
        id="next-page"
        class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
      >
        Next
      </button>
    </nav>
  </div>
</div>

<script define:vars={{ API_ENDPOINT, API_KEY, AGENCY_ID }}>
  // ═══════════════════════════════════════════════════════════
  // SEARCH RESULTS LOGIC
  // ═══════════════════════════════════════════════════════════

  let currentPage = 1
  const pageSize = 12
  let viewMode = 'grid' // 'grid' or 'list'

  // Elements
  const loading = document.getElementById('loading')
  const resultsHeader = document.getElementById('results-header')
  const resultsContainer = document.getElementById('results-container')
  const noResults = document.getElementById('no-results')
  const propertiesGrid = document.getElementById('properties-grid')
  const resultsCount = document.getElementById('results-count')
  const activeFilters = document.getElementById('active-filters')
  const sortSelect = document.getElementById('sort')
  const pagination = document.getElementById('pagination')
  const prevPageBtn = document.getElementById('prev-page')
  const nextPageBtn = document.getElementById('next-page')
  const pageNumbers = document.getElementById('page-numbers')
  const gridViewBtn = document.getElementById('grid-view-btn')
  const listViewBtn = document.getElementById('list-view-btn')

  // Fetch properties
  async function searchProperties() {
    try {
      loading?.classList.remove('hidden')
      resultsContainer?.classList.add('hidden')
      resultsHeader?.classList.add('hidden')
      noResults?.classList.add('hidden')
      pagination?.classList.add('hidden')

      // Get search params from URL
      const urlParams = new URLSearchParams(window.location.search)
      
      // Build request body
      const searchParams: any = {
        agency_id: AGENCY_ID,
        limit: pageSize,
        offset: (currentPage - 1) * pageSize,
      }

      // Add filters
      if (urlParams.get('location')) searchParams.location = urlParams.get('location')
      if (urlParams.get('listing_type')) searchParams.listing_type = urlParams.get('listing_type')
      if (urlParams.get('property_type')) searchParams.property_type = urlParams.get('property_type')
      if (urlParams.get('min_bedrooms')) searchParams.min_bedrooms = parseInt(urlParams.get('min_bedrooms')!)
      if (urlParams.get('max_bedrooms')) searchParams.max_bedrooms = parseInt(urlParams.get('max_bedrooms')!)
      if (urlParams.get('min_bathrooms')) searchParams.min_bathrooms = parseInt(urlParams.get('min_bathrooms')!)
      if (urlParams.get('min_price')) searchParams.min_price = parseInt(urlParams.get('min_price')!)
      if (urlParams.get('max_price')) searchParams.max_price = parseInt(urlParams.get('max_price')!)
      if (urlParams.get('furnishing')) searchParams.furnishing = urlParams.get('furnishing')
      if (urlParams.get('parking')) searchParams.parking = urlParams.get('parking')
      if (urlParams.get('epc_rating')) searchParams.epc_rating = urlParams.get('epc_rating')
      if (urlParams.get('has_parking')) searchParams.has_parking = urlParams.get('has_parking') === 'on'
      if (urlParams.get('retirement_home')) searchParams.retirement_home = urlParams.get('retirement_home') === 'on'
      if (urlParams.get('shared_ownership')) searchParams.shared_ownership = urlParams.get('shared_ownership') === 'on'
      
      // Add sort
      if (sortSelect?.value) searchParams.sort_by = sortSelect.value

// ✅ NEW (No Authorization header needed)
const response = await fetch(`${API_ENDPOINT}/search-properties`, {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
    'apikey': API_KEY,  // ✅ Use 'apikey' not 'Authorization'
  },
  body: JSON.stringify(searchParams)
})

      if (!response.ok) throw new Error('Search failed')

      const data = await response.json()

      // Track search event
      if (window.StratosTracker) {
        window.StratosTracker.track('search', {
          ...searchParams,
          results_count: data.total
        })
      }

      displayResults(data)
    } catch (error) {
      console.error('Search error:', error)
      loading?.classList.add('hidden')
      noResults?.classList.remove('hidden')
    }
  }

  // Display results
  function displayResults(data: any) {
    loading?.classList.add('hidden')

    if (data.properties.length === 0) {
      noResults?.classList.remove('hidden')
      return
    }

    resultsHeader?.classList.remove('hidden')
    resultsContainer?.classList.remove('hidden')

    // Update results count
    if (resultsCount) {
      resultsCount.textContent = data.total.toString()
    }

    // Display active filters
    displayActiveFilters()

    // Display properties
    if (propertiesGrid) {
      propertiesGrid.innerHTML = data.properties.map((property: any) => createPropertyCard(property)).join('')
    }

    // Update pagination
    updatePagination(data.total, data.limit, data.offset)
  }

  // Create property card HTML
  function createPropertyCard(property: any): string {
    const primaryImage = property.property_media?.[0]
    const price = property.listing_type === 'sale' 
      ? `£${property.asking_price?.toLocaleString()}`
      : `£${property.rent_amount?.toLocaleString()}/${property.rent_frequency === 'weekly' ? 'pw' : 'pcm'}`
    
    const propertySlug = `${property.id}-${property.display_address?.toLowerCase().replace(/[^a-z0-9]+/g, '-')}`

    return `
      
        href="/properties/${propertySlug}"
        class="group bg-white rounded-xl shadow-sm border border-gray-200 hover:shadow-2xl transition-all duration-300 overflow-hidden"
        data-property-card
        data-property-id="${property.id}"
      >
        <div class="relative aspect-[4/3] overflow-hidden">
          ${primaryImage ? `
            <img
              src="${primaryImage.thumbnail_url || primaryImage.file_url}"
              alt="${property.display_address}"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
            />
          ` : `
            <div class="w-full h-full bg-gray-200 flex items-center justify-center">
              <svg class="h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
          `}
          
          ${property.listing_status === 'under_offer' ? `
            <div class="absolute top-4 left-4">
              <span class="px-3 py-1 bg-yellow-500 text-white rounded-full text-sm font-bold">
                Under Offer
              </span>
            </div>
          ` : ''}

          ${property.is_featured ? `
            <div class="absolute top-4 left-4">
              <span class="px-3 py-1 bg-yellow-500 text-white rounded-full text-sm font-bold flex items-center gap-1">
                ⭐ Featured
              </span>
            </div>
          ` : ''}

          ${property.property_media?.length > 1 ? `
            <div class="absolute bottom-4 right-4">
              <span class="px-2 py-1 bg-black/70 text-white rounded text-sm font-medium flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                ${property.property_media.length}
              </span>
            </div>
          ` : ''}
        </div>

        <div class="p-6">
          <p class="text-2xl font-bold text-gray-900 mb-3">${price}</p>
          
          <h3 class="text-lg font-semibold text-gray-900 mb-1 line-clamp-1 group-hover:text-[#064728] transition-colors">
            ${property.display_address}
          </h3>
          <p class="text-sm text-gray-600 mb-4">${property.city}</p>

          <div class="flex items-center gap-4 text-sm text-gray-600">
            ${property.bedrooms ? `
              <span class="flex items-center gap-1">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                ${property.bedrooms}
              </span>
            ` : ''}
            ${property.bathrooms ? `
              <span class="flex items-center gap-1">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                ${property.bathrooms}
              </span>
            ` : ''}
            ${property.receptions ? `
              <span class="flex items-center gap-1">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                ${property.receptions}
              </span>
            ` : ''}
          </div>
        </div>
      </a>
    `
  }

  // Display active filters
  function displayActiveFilters() {
    if (!activeFilters) return

    const urlParams = new URLSearchParams(window.location.search)
    const filters: string[] = []

    const filterLabels: Record<string, string> = {
      location: 'Location',
      listing_type: 'Type',
      property_type: 'Property',
      min_bedrooms: 'Min beds',
      max_bedrooms: 'Max beds',
      min_bathrooms: 'Min baths',
      min_price: 'Min price',
      max_price: 'Max price',
      furnishing: 'Furnishing',
      parking: 'Parking',
      epc_rating: 'EPC',
    }

    urlParams.forEach((value, key) => {
      if (filterLabels[key] && value && value !== 'all') {
        filters.push(`
          <span class="inline-flex items-center gap-2 px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
            ${filterLabels[key]}: ${value}
            <button
              onclick="removeFilter('${key}')"
              class="hover:text-red-600"
            >
              ×
            </button>
          </span>
        `)
      }
    })

    activeFilters.innerHTML = filters.join('')
  }

  // Remove filter
  ;(window as any).removeFilter = (key: string) => {
    const urlParams = new URLSearchParams(window.location.search)
    urlParams.delete(key)
    window.location.href = `/properties/search?${urlParams.toString()}`
  }

  // Update pagination
  function updatePagination(total: number, limit: number, offset: number) {
    const totalPages = Math.ceil(total / limit)
    currentPage = Math.floor(offset / limit) + 1

    if (totalPages <= 1) {
      pagination?.classList.add('hidden')
      return
    }

    pagination?.classList.remove('hidden')

    // Update prev/next buttons
    if (prevPageBtn) {
      prevPageBtn.disabled = currentPage === 1
    }
    if (nextPageBtn) {
      nextPageBtn.disabled = currentPage === totalPages
    }

    // Generate page numbers
    if (pageNumbers) {
      const pages: string[] = []
      for (let i = 1; i <= totalPages; i++) {
        if (
          i === 1 ||
          i === totalPages ||
          (i >= currentPage - 2 && i <= currentPage + 2)
        ) {
          pages.push(`
            <button
              onclick="goToPage(${i})"
              class="px-4 py-2 border rounded-lg ${
                i === currentPage
                  ? 'bg-[#064728] text-white border-[#064728]'
                  : 'border-gray-300 hover:bg-gray-50'
              }"
            >
              ${i}
            </button>
          `)
        } else if (i === currentPage - 3 || i === currentPage + 3) {
          pages.push('<span class="px-2">...</span>')
        }
      }
      pageNumbers.innerHTML = pages.join('')
    }
  }

  // Go to page
  ;(window as any).goToPage = (page: number) => {
    currentPage = page
    window.scrollTo({ top: 0, behavior: 'smooth' })
    searchProperties()
  }

  // View mode toggle
  gridViewBtn?.addEventListener('click', () => {
    viewMode = 'grid'
    gridViewBtn.classList.add('bg-[#064728]', 'text-white')
    gridViewBtn.classList.remove('bg-white', 'text-gray-600')
    listViewBtn?.classList.remove('bg-[#064728]', 'text-white')
    listViewBtn?.classList.add('bg-white', 'text-gray-600')
    
    propertiesGrid?.classList.remove('space-y-6')
    propertiesGrid?.classList.add('grid', 'grid-cols-1', 'md:grid-cols-2', 'lg:grid-cols-3', 'gap-6')
  })

  listViewBtn?.addEventListener('click', () => {
    viewMode = 'list'
    listViewBtn.classList.add('bg-[#064728]', 'text-white')
    listViewBtn.classList.remove('bg-white', 'text-gray-600')
    gridViewBtn?.classList.remove('bg-[#064728]', 'text-white')
    gridViewBtn?.classList.add('bg-white', 'text-gray-600')
    
    propertiesGrid?.classList.add('space-y-6')
    propertiesGrid?.classList.remove('grid', 'grid-cols-1', 'md:grid-cols-2', 'lg:grid-cols-3', 'gap-6')
  })

  // Sort change
  sortSelect?.addEventListener('change', () => {
    currentPage = 1
    searchProperties()
  })

  // Pagination buttons
  prevPageBtn?.addEventListener('click', () => {
    if (currentPage > 1) {
      ;(window as any).goToPage(currentPage - 1)
    }
  })

  nextPageBtn?.addEventListener('click', () => {
    ;(window as any).goToPage(currentPage + 1)
  })

  // Initial search
  searchProperties()
</script>