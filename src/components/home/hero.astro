---
// Hero section with background image and search form overlay
---

<section class="relative h-screen min-h-[600px] max-h-[900px] flex items-center">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <!-- Replace with your hero image -->
      <img
        src="/images/hero-bg.jpg"
        alt="Beautiful property exterior"
        class="w-full h-full object-cover"
      />
      <!-- Dark overlay for text readability -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70"></div>
    </div>
  
    <!-- Content Container -->
    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
          Find Your Dream Home<br />
          <span class="text-emerald-400">in Manchester</span>
        </h1>
  
        <!-- Subheadline -->
        <p class="text-xl sm:text-2xl text-gray-200 mb-8 max-w-2xl mx-auto">
          Expert estate agents helping you buy, sell, and rent properties across Greater Manchester
        </p>
  
        <!-- Quick Stats -->
        <div class="flex justify-center gap-8 mb-10 text-white">
          <div class="text-center">
            <p class="text-3xl font-bold text-emerald-400">500+</p>
            <p class="text-sm text-gray-300">Properties</p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-bold text-emerald-400">25+</p>
            <p class="text-sm text-gray-300">Years Experience</p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-bold text-emerald-400">98%</p>
            <p class="text-sm text-gray-300">Client Satisfaction</p>
          </div>
        </div>
  
        <!-- Search Form -->
        <div class="bg-white rounded-2xl shadow-2xl p-6 sm:p-8">
          <form action="/properties/search" method="GET" class="space-y-4">
            <!-- Listing Type Tabs -->
            <div class="flex gap-2 mb-6">
              <button
                type="button"
                data-listing-type="sale"
                class="listing-type-btn flex-1 px-6 py-3 rounded-lg font-semibold transition-all bg-[#064728] text-white"
              >
                For Sale
              </button>
              <button
                type="button"
                data-listing-type="rent"
                class="listing-type-btn flex-1 px-6 py-3 rounded-lg font-semibold transition-all bg-gray-100 text-gray-700 hover:bg-gray-200"
              >
                To Rent
              </button>
            </div>
  
            <input type="hidden" name="listing_type" id="listing_type" value="sale" />
  
            <!-- Search Fields -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
              <!-- Location -->
              <div class="sm:col-span-2 lg:col-span-2">
                <label for="location" class="block text-sm font-medium text-gray-700 mb-2 text-left">
                  Location
                </label>
                <div class="relative">
                  <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <input
                    type="text"
                    name="location"
                    id="location"
                    placeholder="e.g. Manchester, M1"
                    class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728] text-gray-900"
                  />
                </div>
              </div>
  
              <!-- Min Bedrooms -->
              <div>
                <label for="min_beds" class="block text-sm font-medium text-gray-700 mb-2 text-left">
                  Min Beds
                </label>
                <select
                  name="min_beds"
                  id="min_beds"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728] text-gray-900"
                >
                  <option value="">Any</option>
                  <option value="1">1+</option>
                  <option value="2">2+</option>
                  <option value="3">3+</option>
                  <option value="4">4+</option>
                  <option value="5">5+</option>
                </select>
              </div>
  
              <!-- Max Price -->
              <div>
                <label for="max_price" class="block text-sm font-medium text-gray-700 mb-2 text-left">
                  Max Price
                </label>
                <select
                  name="max_price"
                  id="max_price"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#064728] focus:border-[#064728] text-gray-900"
                >
                  <option value="">No max</option>
                  <!-- Dynamic options loaded by JS based on listing type -->
                </select>
              </div>
            </div>
  
            <!-- Search Button -->
            <button
              type="submit"
              class="w-full px-8 py-4 bg-[#064728] text-white font-bold rounded-lg hover:bg-[#0a5c35] transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center justify-center gap-3"
            >
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <span>Search Properties</span>
            </button>
  
            <!-- Advanced Search Link -->
            <div class="text-center">
              <a
                href="/properties/search"
                class="text-sm text-[#064728] hover:text-[#0a5c35] font-medium inline-flex items-center gap-1"
              >
                Advanced search
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  
    <!-- Scroll Down Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
      <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </section>
  
  <script>
    // ═══════════════════════════════════════════════════════════
    // LISTING TYPE TOGGLE
    // ═══════════════════════════════════════════════════════════
    const listingTypeBtns = document.querySelectorAll('.listing-type-btn')
    const listingTypeInput = document.getElementById('listing_type') as HTMLInputElement
    const maxPriceSelect = document.getElementById('max_price') as HTMLSelectElement
  
    // Price options
    const salePrices = [
      { value: '100000', label: '£100k' },
      { value: '150000', label: '£150k' },
      { value: '200000', label: '£200k' },
      { value: '250000', label: '£250k' },
      { value: '300000', label: '£300k' },
      { value: '350000', label: '£350k' },
      { value: '400000', label: '£400k' },
      { value: '450000', label: '£450k' },
      { value: '500000', label: '£500k' },
      { value: '600000', label: '£600k' },
      { value: '750000', label: '£750k' },
      { value: '1000000', label: '£1m' },
      { value: '1500000', label: '£1.5m' },
      { value: '2000000', label: '£2m' },
    ]
  
    const rentPrices = [
      { value: '500', label: '£500 pcm' },
      { value: '600', label: '£600 pcm' },
      { value: '700', label: '£700 pcm' },
      { value: '800', label: '£800 pcm' },
      { value: '900', label: '£900 pcm' },
      { value: '1000', label: '£1,000 pcm' },
      { value: '1250', label: '£1,250 pcm' },
      { value: '1500', label: '£1,500 pcm' },
      { value: '2000', label: '£2,000 pcm' },
      { value: '2500', label: '£2,500 pcm' },
      { value: '3000', label: '£3,000 pcm' },
      { value: '4000', label: '£4,000 pcm' },
      { value: '5000', label: '£5,000 pcm' },
    ]
  
    function updatePriceOptions(listingType: string) {
      const prices = listingType === 'sale' ? salePrices : rentPrices
      
      maxPriceSelect.innerHTML = '<option value="">No max</option>'
      prices.forEach(price => {
        const option = document.createElement('option')
        option.value = price.value
        option.textContent = price.label
        maxPriceSelect.appendChild(option)
      })
    }
  
    listingTypeBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const listingType = btn.getAttribute('data-listing-type') as string
        
        // Update button styles
        listingTypeBtns.forEach(b => {
          b.classList.remove('bg-[#064728]', 'text-white')
          b.classList.add('bg-gray-100', 'text-gray-700')
        })
        btn.classList.remove('bg-gray-100', 'text-gray-700')
        btn.classList.add('bg-[#064728]', 'text-white')
        
        // Update hidden input
        listingTypeInput.value = listingType
        
        // Update price options
        updatePriceOptions(listingType)
      })
    })
  
    // Initialize with sale prices
    updatePriceOptions('sale')
  </script>
  
  <style>
    @keyframes slide-up {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  
    .animate-slide-up {
      animation: slide-up 0.6s ease-out;
    }
  </style>