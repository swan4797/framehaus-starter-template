---
interface Props {
  property: any
}

const { property } = Astro.props
---

<div class="flex items-center justify-between gap-4 pb-6 border-b border-gray-200">
  <div class="flex items-center gap-3">
    <!-- Save Button -->
    <button
      type="button"
      id="save-property-btn"
      class="save-property-btn flex items-center gap-2 px-4 py-2 border-2 border-gray-300 rounded-lg hover:border-[#064728] transition-colors"
      data-property-id={property.id}
    >
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
      <span id="save-text">Save</span>
    </button>

    <!-- Share Button -->
    <button
      type="button"
      id="share-property-btn"
      class="flex items-center gap-2 px-4 py-2 border-2 border-gray-300 rounded-lg hover:border-[#064728] transition-colors"
    >
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
      </svg>
      <span>Share</span>
    </button>

    <!-- Print Button -->
    <button
      type="button"
      id="print-property-btn"
      class="flex items-center gap-2 px-4 py-2 border-2 border-gray-300 rounded-lg hover:border-[#064728] transition-colors"
    >
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
      </svg>
      <span>Print</span>
    </button>
  </div>

  <!-- Reference Number -->
  <div class="text-right">
    <p class="text-sm text-gray-600">Property Ref:</p>
    <p class="font-semibold text-gray-900">{property.agent_ref || property.id.slice(0, 8).toUpperCase()}</p>
  </div>
</div>

<!-- Share Modal -->
<div id="share-modal" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center p-4">
  <div class="bg-white rounded-lg max-w-md w-full p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold text-gray-900">Share Property</h3>
      <button
        type="button"
        id="close-share-modal"
        class="w-8 h-8 flex items-center justify-center hover:bg-gray-100 rounded-full transition-colors"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Share Options -->
    <div class="space-y-3">
      <button
        type="button"
        class="share-option w-full flex items-center gap-3 p-3 hover:bg-gray-50 rounded-lg transition-colors"
        data-method="email"
      >
        <div class="w-10 h-10 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <span class="font-medium text-gray-900">Share via Email</span>
      </button>

      <button
        type="button"
        class="share-option w-full flex items-center gap-3 p-3 hover:bg-gray-50 rounded-lg transition-colors"
        data-method="whatsapp"
      >
        <div class="w-10 h-10 bg-green-100 text-green-600 rounded-full flex items-center justify-center">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
        </div>
        <span class="font-medium text-gray-900">Share via WhatsApp</span>
      </button>

      <button
        type="button"
        class="share-option w-full flex items-center gap-3 p-3 hover:bg-gray-50 rounded-lg transition-colors"
        data-method="facebook"
      >
        <div class="w-10 h-10 bg-blue-600 text-white rounded-full flex items-center justify-center">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </div>
        <span class="font-medium text-gray-900">Share on Facebook</span>
      </button>

      <div class="relative">
        <input
          type="text"
          id="copy-link-input"
          value={typeof window !== 'undefined' ? window.location.href : ''}
          readonly
          class="w-full px-4 py-3 pr-24 bg-gray-50 border border-gray-200 rounded-lg text-sm"
        />
        <button
          type="button"
          id="copy-link-btn"
          class="absolute right-2 top-1/2 -translate-y-1/2 px-4 py-1.5 bg-[#064728] text-white rounded text-sm font-medium hover:bg-[#0a5c35] transition-colors"
        >
          Copy
        </button>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ property }}>
  // Save property
  const saveBtn = document.getElementById('save-property-btn')
  const saveText = document.getElementById('save-text')
  const saveSvg = saveBtn?.querySelector('svg')

  const saved = JSON.parse(localStorage.getItem('saved-properties') || '[]')
  const isSaved = saved.includes(property.id)

  if (isSaved && saveBtn && saveText && saveSvg) {
    saveBtn.classList.add('border-[#064728]', 'bg-[#064728]/10')
    saveText.textContent = 'Saved'
    saveSvg.setAttribute('fill', 'currentColor')
  }

  saveBtn?.addEventListener('click', () => {
    const saved = JSON.parse(localStorage.getItem('saved-properties') || '[]')
    const isSaved = saved.includes(property.id)

    if (isSaved) {
      const filtered = saved.filter(id => id !== property.id)
      localStorage.setItem('saved-properties', JSON.stringify(filtered))
      
      saveBtn.classList.remove('border-[#064728]', 'bg-[#064728]/10')
      if (saveText) saveText.textContent = 'Save'
      saveSvg?.setAttribute('fill', 'none')
    } else {
      saved.push(property.id)
      localStorage.setItem('saved-properties', JSON.stringify(saved))
      
      saveBtn.classList.add('border-[#064728]', 'bg-[#064728]/10')
      if (saveText) saveText.textContent = 'Saved'
      saveSvg?.setAttribute('fill', 'currentColor')
    }
  })

  // Share
  const shareBtn = document.getElementById('share-property-btn')
  const shareModal = document.getElementById('share-modal')
  const closeModal = document.getElementById('close-share-modal')

  shareBtn?.addEventListener('click', () => {
    shareModal?.classList.remove('hidden')
    
    // Populate copy input
    const copyInput = document.getElementById('copy-link-input')
    if (copyInput) {
      copyInput.value = window.location.href
    }
  })

  closeModal?.addEventListener('click', () => {
    shareModal?.classList.add('hidden')
  })

  // Share options
  document.querySelectorAll('.share-option').forEach(btn => {
    btn.addEventListener('click', () => {
      const method = btn.getAttribute('data-method')
      const url = encodeURIComponent(window.location.href)
      const text = encodeURIComponent(`Check out this property: ${property.display_address}`)

      let shareUrl = ''
      
      switch (method) {
        case 'email':
          shareUrl = `mailto:?subject=Property: ${property.display_address}&body=${text}%0A%0A${url}`
          break
        case 'whatsapp':
          shareUrl = `https://wa.me/?text=${text}%20${url}`
          break
        case 'facebook':
          shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`
          break
      }

      if (shareUrl) {
        window.open(shareUrl, '_blank', 'width=600,height=400')
      }
    })
  })

  // Copy link
  const copyBtn = document.getElementById('copy-link-btn')
  copyBtn?.addEventListener('click', () => {
    const input = document.getElementById('copy-link-input')
    if (input) {
      input.select()
      document.execCommand('copy')
      
      if (copyBtn) {
        copyBtn.textContent = 'Copied!'
        setTimeout(() => {
          copyBtn.textContent = 'Copy'
        }, 2000)
      }
    }
  })

  // Print
  const printBtn = document.getElementById('print-property-btn')
  printBtn?.addEventListener('click', () => {
    window.print()
  })
</script>