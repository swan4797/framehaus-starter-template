---
interface Props {
  features: string[]
}

const { features } = Astro.props

// Group features by category
const categorizedFeatures = {
  general: [] as string[],
  rooms: [] as string[],
  outdoor: [] as string[],
  services: [] as string[]
}

features.forEach(feature => {
  const lower = feature.toLowerCase()
  if (lower.includes('garden') || lower.includes('patio') || lower.includes('balcony') || lower.includes('terrace')) {
    categorizedFeatures.outdoor.push(feature)
  } else if (lower.includes('kitchen') || lower.includes('bedroom') || lower.includes('bathroom') || lower.includes('living')) {
    categorizedFeatures.rooms.push(feature)
  } else if (lower.includes('heating') || lower.includes('water') || lower.includes('electricity') || lower.includes('broadband')) {
    categorizedFeatures.services.push(feature)
  } else {
    categorizedFeatures.general.push(feature)
  }
})
---

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h3 class="text-xl font-bold text-gray-900 mb-4">Key Features</h3>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
    {features.map(feature => (
      <div class="flex items-start gap-3">
        <svg class="h-5 w-5 text-[#064728] flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span class="text-gray-700 capitalize">{feature.replace('_', ' ')}</span>
      </div>
    ))}
  </div>
</div>