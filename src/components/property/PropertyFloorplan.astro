---
interface Props {
  floorplans: any[]
}

const { floorplans } = Astro.props
---

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h3 class="text-xl font-bold text-gray-900 mb-4">Floor Plan</h3>

  <div class="space-y-4">
    {floorplans.map((floorplan, index) => (
      <div>
        {floorplan.caption && (
          <p class="text-sm text-gray-600 mb-2">{floorplan.caption}</p>
        )}
        
        <button
          type="button"
          class="floorplan-button relative group block w-full"
          data-image-url={floorplan.file_url}
        >
          <img
            src={floorplan.thumbnail_url || floorplan.file_url}
            alt={`Floor plan ${index + 1}`}
            class="w-full rounded-lg border border-gray-200 hover:border-[#064728] transition-colors"
          />
          
          <!-- Zoom overlay -->
          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors rounded-lg flex items-center justify-center">
            <div class="opacity-0 group-hover:opacity-100 transition-opacity bg-white/90 rounded-full p-3">
              <svg class="h-6 w-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
              </svg>
            </div>
          </div>
        </button>
      </div>
    ))}
  </div>
</div>

<!-- Floorplan Modal -->
<div id="floorplan-modal" class="fixed inset-0 bg-black/90 z-50 hidden">
  <div class="relative w-full h-full flex items-center justify-center p-8">
    <img
      id="floorplan-modal-image"
      src=""
      alt="Floor plan"
      class="max-w-full max-h-full object-contain"
    />

    <button
      type="button"
      id="floorplan-modal-close"
      class="absolute top-4 right-4 w-12 h-12 bg-white/20 hover:bg-white/30 text-white rounded-full flex items-center justify-center transition-all"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    
