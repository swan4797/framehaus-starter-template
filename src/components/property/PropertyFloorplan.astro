</div>

<script>
  const buttons = document.querySelectorAll('.floorplan-button')
  const modal = document.getElementById('floorplan-modal')
  const modalImage = document.getElementById('floorplan-modal-image')
  const modalClose = document.getElementById('floorplan-modal-close')
  const downloadLink = document.getElementById('floorplan-download')

  buttons.forEach(button => {
    button.addEventListener('click', () => {
      const imageUrl = button.getAttribute('data-image-url')
      
      if (modalImage && imageUrl) {
        modalImage.setAttribute('src', imageUrl)
      }
      
      if (downloadLink && imageUrl) {
        downloadLink.setAttribute('href', imageUrl)
      }
      
      modal?.classList.remove('hidden')
    })
  })

  modalClose?.addEventListener('click', () => {
    modal?.classList.add('hidden')
  })

  // Close on escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
      modal.classList.add('hidden')
    }
  })
</script>