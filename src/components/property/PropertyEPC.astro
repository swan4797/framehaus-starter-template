---
interface Props {
  rating: string
  currentScore?: number
  potentialScore?: number
  expiresAt?: string
  certificate?: any
}

const { rating, currentScore, potentialScore, expiresAt, certificate } = Astro.props

const ratingColors = {
  A: 'bg-green-600',
  B: 'bg-green-500',
  C: 'bg-yellow-500',
  D: 'bg-yellow-600',
  E: 'bg-orange-500',
  F: 'bg-red-500',
  G: 'bg-red-600',
}

const allRatings = ['A', 'B', 'C', 'D', 'E', 'F', 'G']
---

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h3 class="text-xl font-bold text-gray-900 mb-4">Energy Performance</h3>

  <div class="space-y-6">
    <!-- EPC Rating Bar -->
    <div>
      <p class="text-sm text-gray-600 mb-3">Energy Efficiency Rating</p>
      <div class="space-y-1">
        {allRatings.map(letter => (
          <div class="flex items-center gap-2">
            <div class={`flex-1 h-8 rounded ${ratingColors[letter]} ${letter === rating ? 'ring-2 ring-offset-2 ring-gray-900' : 'opacity-30'} flex items-center justify-between px-3`}>
              <span class="text-white font-bold">{letter}</span>
              {letter === rating && currentScore && (
                <span class="text-white font-bold">{currentScore}</span>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Scores -->
    {(currentScore || potentialScore) && (
      <div class="grid grid-cols-2 gap-4">
        {currentScore && (
          <div class="text-center p-4 bg-gray-50 rounded-lg">
            <p class="text-sm text-gray-600 mb-1">Current</p>
            <p class="text-3xl font-bold text-gray-900">{currentScore}</p>
            <p class="text-sm text-gray-600 mt-1">Rating {rating}</p>
          </div>
        )}
        {potentialScore && (
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <p class="text-sm text-gray-600 mb-1">Potential</p>
            <p class="text-3xl font-bold text-green-700">{potentialScore}</p>
            <p class="text-sm text-gray-600 mt-1">With improvements</p>
          </div>
        )}
      </div>
    )}

    <!-- Certificate -->
    {certificate && (
      <div>
        <button
          type="button"
          id="view-epc-certificate"
          class="w-full flex items-center justify-center gap-2 px-4 py-3 border-2 border-gray-300 rounded-lg hover:border-[#064728] hover:bg-gray-50 transition-colors font-medium text-gray-700"
          data-certificate-url={certificate.file_url}
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          View Full EPC Certificate
        </button>
      </div>
    )}

    <!-- Expiry Date -->
    {expiresAt && (
      <p class="text-sm text-gray-600">
        Certificate expires: {new Date(expiresAt).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' })}
      </p>
    )}

    <!-- Info Note -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <p class="text-sm text-blue-800">
        <strong>Energy Performance Certificates (EPC)</strong> assess the energy efficiency of properties on a scale from A (most efficient) to G (least efficient) and are valid for 10 years.
      </p>
    </div>
  </div>
</div>

<script>
  const viewButton = document.getElementById('view-epc-certificate')
  
  viewButton?.addEventListener('click', () => {
    const url = viewButton.getAttribute('data-certificate-url')
    if (url) {
      window.open(url, '_blank')
    }
  })
</script>