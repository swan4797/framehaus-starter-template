---
import PropertyCard from '../../components/results/PropertyCard.astro'

interface Props {
  properties: any[]
}

const { properties } = Astro.props
---

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h3 class="text-2xl font-bold text-gray-900 mb-6">Similar Properties</h3>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {properties.map(property => (
      <PropertyCard property={property} variant="grid" />
    ))}
  </div>
</div>