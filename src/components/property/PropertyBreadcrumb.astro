---
interface Props {
  property: any
}

const { property } = Astro.props

const listingTypeLabel = property.listing_type === 'sale' ? 'For Sale' : 'To Rent'
---

<nav class="flex items-center gap-2 text-sm" aria-label="Breadcrumb">
  <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Home</a>
  
  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
  </svg>
  
  <a href="/properties/search" class="text-gray-600 hover:text-gray-900 transition-colors">Property Search</a>
  
  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
  </svg>
  
  <a 
    href={`/properties/search?type=${property.listing_type}`}
    class="text-gray-600 hover:text-gray-900 transition-colors"
  >
    {listingTypeLabel}
  </a>
  
  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
  </svg>
  
  {property.city && (
    <>
      <a 
        href={`/properties/search?type=${property.listing_type}&location=${property.city}`}
        class="text-gray-600 hover:text-gray-900 transition-colors"
      >
        {property.city}
      </a>
      
      <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </>
  )}
  
  <span class="text-gray-900 font-medium truncate">{property.display_address}</span>
</nav>