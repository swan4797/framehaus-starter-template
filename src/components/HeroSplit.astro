---
// Hero.astro
interface PropertyImage {
  src: string;
  alt: string;
}

interface Props {
  headline?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
  propertyImages?: PropertyImage[];
}

const {
  headline = "The prefab home of your dreams is here",
  description = "Find the best prefab homes, ADUs, cabins, and more.",
  ctaText = "Start exploring",
  ctaLink = "/search",
  propertyImages = [
    { src: "/images/property-1.jpg", alt: "Modern prefab home" },
    { src: "/images/property-2.jpg", alt: "Wooden cabin" },
    { src: "/images/property-3.jpg", alt: "A-frame house" },
    { src: "/images/property-4.jpg", alt: "Container home" },
  ],
} = Astro.props;
---

<section class="hero__section">
  <div class="hero__container">
    <!-- Left Content -->
    <div class="hero__content">
      <div class="text__animate__wrapper">
        <h1 class="hero__headline slide__up" style="animation-delay: 0.2s;">
          {headline}
        </h1>
      </div>
      
      <div class="text__animate__wrapper">
        <p class="hero__description slide__up" style="animation-delay: 0.4s;">
          {description}
        </p>
      </div>
      
      <div class="cta__animate__wrapper">
        <a href={ctaLink} class="hero__cta slide__up" style="animation-delay: 0.6s;">
          {ctaText}
        </a>
      </div>
    </div>

    <!-- Right Image Grid -->
    <div class="hero__showcase">
      <div class="showcase__grid">
        {
          propertyImages.map((image, index) => (
            <div 
              class="showcase__item" 
              style={`animation-delay: ${0.8 + (index * 0.15)}s`}
            >
              <img src={image.src} alt={image.alt} />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  // ========================================
  // BRAND VARIABLES
  // ========================================
  $primary: #3c5b4b;
  $secondary: #f6f4f4;
  $accent: #ef4444; // Red for search button
  $text__dark: #1a1a1a;
  $text__gray: #6b7280;
  $text__light: #9ca3af;
  $white: #ffffff;
  $border__color: #e5e7eb;
  
  // Typography
  $font__family: 'Garet', 'Inter', system-ui, -apple-system, sans-serif;

  // ========================================
  // HERO SECTION
  // ========================================
  .hero__section {
    width: 100%;
    background: $secondary;
    padding: 4rem 2rem 3rem;
    position: relative;
  }

  .hero__container {
    max-width: 1280px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.3fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 3rem;

    @media (max-width: 1024px) {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  // ========================================
  // LEFT CONTENT
  // ========================================
  .hero__content {
    padding-right: 2rem;

    @media (max-width: 1024px) {
      padding-right: 0;
      text-align: center;
    }
  }

  .hero__headline {
    font-size: clamp(2.5rem, 5vw, 3.75rem);
    font-weight: 700;
    color: $text__dark;
    margin: 0 0 1.5rem 0;
    line-height: 1.1;
    letter-spacing: -0.03em;
  }

  .hero__description {
    font-size: clamp(1.125rem, 1.5vw, 1.25rem);
    color: $text__gray;
    margin: 0 0 2.5rem 0;
    line-height: 1.6;
    font-weight: 400;
  }

  .hero__cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-size: 1.05rem;
    color: $white;
    background: $text__dark;
    border: none;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;

    &:hover {
      background: lighten($text__dark, 10%);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    &:active {
      transform: translateY(0);
    }
  }

  // ========================================
  // RIGHT IMAGE GRID
  // ========================================
  .hero__showcase {
    width: 100%;
    max-width: 100%;
  }

  .showcase__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    width: 100%;

    @media (max-width: 640px) {
      grid-template-columns: 1fr;
    }
  }

  .showcase__item {
    position: relative;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    border-radius: 12px;
    background: #e5e7eb;
    opacity: 0;
    animation: fade__in 0.8s ease forwards;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
    }

    &:hover img {
      transform: scale(1.08);
    }
  }

  // ========================================
  // SEARCH SECTION
  // ========================================
  .search__container {
    max-width: 1280px;
    margin: 0 auto;
    width: 100%;
  }

  .search__wrapper {
    background: $white;
    border-radius: 12px;
    padding: 1.5rem;
    display: grid;
    grid-template-columns: 2fr repeat(3, 1fr) auto;
    gap: 1rem;
    align-items: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);

    @media (max-width: 1024px) {
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    @media (max-width: 640px) {
      grid-template-columns: 1fr;
    }
  }

  // ========================================
  // SEARCH INPUT
  // ========================================
  .search__input__wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search__icon {
    position: absolute;
    left: 1rem;
    width: 1.25rem;
    height: 1.25rem;
    color: $text__light;
    pointer-events: none;
  }

  .search__input {
    width: 100%;
    padding: 0.875rem 1rem 0.875rem 3rem;
    border: 1px solid $border__color;
    border-radius: 8px;
    font-size: 0.95rem;
    color: $text__dark;
    font-family: $font__family;
    transition: all 0.2s ease;

    &::placeholder {
      color: $text__light;
    }

    &:focus {
      outline: none;
      border-color: $primary;
      box-shadow: 0 0 0 3px rgba($primary, 0.1);
    }
  }

  // ========================================
  // DROPDOWNS
  // ========================================
  .search__dropdown {
    position: relative;
    display: flex;
    align-items: center;
  }

  .dropdown__icon {
    position: absolute;
    left: 1rem;
    width: 1.25rem;
    height: 1.25rem;
    color: $text__light;
    pointer-events: none;
    z-index: 1;
  }

  .dropdown__chevron {
    position: absolute;
    right: 1rem;
    width: 1rem;
    height: 1rem;
    color: $text__light;
    pointer-events: none;
    z-index: 1;
  }

  .dropdown__select {
    width: 100%;
    padding: 0.875rem 3rem 0.875rem 3rem;
    border: 1px solid $border__color;
    border-radius: 8px;
    font-size: 0.95rem;
    color: $text__dark;
    font-family: $font__family;
    background: $white;
    cursor: pointer;
    appearance: none;
    transition: all 0.2s ease;

    &:focus {
      outline: none;
      border-color: $primary;
      box-shadow: 0 0 0 3px rgba($primary, 0.1);
    }

    option {
      padding: 0.5rem;
    }
  }

  // ========================================
  // SEARCH BUTTON
  // ========================================
  .search__button {
    padding: 0.875rem 2.5rem;
    background: $accent;
    color: $white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    font-family: $font__family;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;

    &:hover {
      background: darken($accent, 8%);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba($accent, 0.3);
    }

    &:active {
      transform: translateY(0);
    }

    @media (max-width: 1024px) {
      grid-column: 1 / -1;
      width: 100%;
    }
  }

  // ========================================
  // ANIMATIONS
  // ========================================
  .text__animate__wrapper,
  .cta__animate__wrapper {
    overflow: hidden;
  }

  .slide__up {
    animation: slide__up 0.85s cubic-bezier(0.65, 0, 0.35, 1) both;
    opacity: 0;
  }

  @keyframes slide__up {
    0% {
      transform: translateY(100%);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes fade__in {
    0% {
      opacity: 0;
      transform: scale(0.96);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  // ========================================
  // RESPONSIVE ADJUSTMENTS
  // ========================================
  @media (max-width: 640px) {
    .hero__section {
      padding: 2rem 1.5rem;
    }

    .hero__headline {
      font-size: 2rem;
    }

    .hero__description {
      font-size: 1rem;
    }

    .showcase__item {
      aspect-ratio: 16 / 10;
    }
  }
</style>