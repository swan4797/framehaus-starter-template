---
// ========================================
// STATIC HERO
// Hero section for static pages
// ========================================

import type { HeroProps, HeroTitleLine } from '../types'

interface Props extends HeroProps {
  class?: string
}

const {
  label = '',
  titleLines = [],
  title = '',
  tagline = '',
  ctaLabel = '',
  ctaUrl = '',
  heroImage = '',
  heroImageAlt = '',
  class: className = '',
} = Astro.props

// Build title from titleLines or simple title
const hasCustomTitle = titleLines.length > 0
---

<section class:list={['hero', className]}>
  <div class="hero__container">
    <div class="hero__left">
      {label && <span class="hero__label">{label}</span>}

      <h1 class="hero__title">
        {hasCustomTitle ? (
          titleLines.map((line: HeroTitleLine) => (
            <span class="hero__title-line">
              {line.accent ? (
                <>
                  {line.text.replace(line.accent, '').trim()}{' '}
                  <span class="hero__title-accent">{line.accent}</span>
                </>
              ) : (
                line.text
              )}
            </span>
          ))
        ) : (
          <span class="hero__title-line">{title}</span>
        )}
      </h1>
    </div>

    <div class="hero__right">
      {tagline && <p class="hero__tagline">{tagline}</p>}

      {ctaLabel && ctaUrl && (
        <a href={ctaUrl} class="hero__btn">
          {ctaLabel}
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      )}
    </div>
  </div>

  {heroImage && (
    <div class="hero__image-container">
      <img
        src={heroImage}
        alt={heroImageAlt || ''}
        class="hero__image"
        loading="eager"
      />
    </div>
  )}
</section>

<style lang="scss">
  @use '../../../styles/variables' as *;
  @use '../../../styles/mixins' as *;

  .hero {
    padding: 80px 40px 100px;
    background: $bg-white;

    @include mobile-only {
      padding: 48px 20px 64px;
    }
  }

  .hero__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    align-items: end;

    @media (min-width: 900px) {
      grid-template-columns: 1.5fr 1fr;
      gap: 64px;
    }
  }

  .hero__label {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    color: $accent-coral;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 16px;
  }

  .hero__title {
    font-size: 3.5rem;
    font-weight: $font-weight-bold;
    color: $text-primary;
    margin: 0;
    line-height: 1.1;
    letter-spacing: -0.03em;

    @media (max-width: 1024px) {
      font-size: 2.75rem;
    }

    @include mobile-only {
      font-size: 2rem;
    }
  }

  .hero__title-line {
    display: block;
  }

  .hero__title-accent {
    color: $accent-coral;
  }

  .hero__right {
    @media (min-width: 900px) {
      text-align: right;
    }
  }

  .hero__tagline {
    font-size: 1.125rem;
    color: $text-secondary;
    line-height: 1.6;
    margin: 0 0 24px 0;
    max-width: 360px;

    @media (min-width: 900px) {
      margin-left: auto;
    }

    @include mobile-only {
      font-size: 1rem;
    }
  }

  .hero__btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 28px;
    background: $text-primary;
    color: $bg-white;
    font-family: $font-family-base;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 9999px;
    transition: background $transition-fast, transform $transition-fast, box-shadow $transition-fast;

    svg {
      width: 18px;
      height: 18px;
    }

    &:hover {
      background: #333;
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    }
  }

  .hero__image-container {
    max-width: 1200px;
    margin: 40px auto 0;
    padding: 0 40px;

    @include mobile-only {
      padding: 0 20px;
      margin-top: 32px;
    }
  }

  .hero__image {
    width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: cover;
    border-radius: $radius-xl;
  }
</style>
