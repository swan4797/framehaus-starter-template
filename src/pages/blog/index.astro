---
// ========================================
// BLOG LIST PAGE
// Clean, modern blog page aligned with template design
// Uses configurable ArticleGrid component
// ========================================

import Layout from '../../layouts/Layout.astro'
import { ArticleGrid, BlogArticleCard } from '../../components/blog'
import { getBlogArticles } from '../../lib/api'
import { fetchBrandSettings } from '../../lib/brand'

// Fetch brand settings
const brand = await fetchBrandSettings()

// Get pagination from URL
const url = new URL(Astro.request.url)
const currentPage = parseInt(url.searchParams.get('page') || '1')
const limit = 12

// Fetch blog articles
const blogResponse = await getBlogArticles({ page: currentPage, limit })
const articles = blogResponse?.articles || []
const totalArticles = blogResponse?.total || 0
const hasMore = blogResponse?.hasMore || false

// Separate featured and regular articles (only on first page)
const featuredArticles = currentPage === 1 ? articles.filter(a => a.is_featured).slice(0, 3) : []
const regularArticles = currentPage === 1
  ? articles.filter(a => !featuredArticles.some(f => f.article_id === a.article_id))
  : articles

// Calculate pagination
const totalPages = Math.ceil(totalArticles / limit)

const pageTitle = `Blog | ${brand.business_name}`
const pageDescription = `Read the latest property news, market insights, and helpful guides from ${brand.business_name}.`

// Stats
const stats = [
  { value: totalArticles.toString(), label: 'Articles', icon: 'book' },
  { value: articles.reduce((sum, a) => sum + (a.view_count || 0), 0).toLocaleString(), label: 'Total Views', icon: 'eye' },
  { value: 'Weekly', label: 'New Content', icon: 'clock' }
]
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="blog-page">

    <!-- Page Header -->
    <section class="blog-header">
      <div class="blog-header__content">
        <h1 class="blog-header__title">Our Blog</h1>
        <p class="blog-header__subtitle">
          Property insights, market updates, and helpful guides to keep you informed about the local property market.
        </p>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="blog-stats">
      <div class="blog-stats__container">
        {stats.map((stat) => (
          <div class="stat-item">
            <div class="stat-item__icon">
              {stat.icon === 'book' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/>
                </svg>
              )}
              {stat.icon === 'eye' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
              )}
              {stat.icon === 'clock' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              )}
            </div>
            <div class="stat-item__value">{stat.value}</div>
            <div class="stat-item__label">{stat.label}</div>
          </div>
        ))}
      </div>
    </section>

    <!-- Featured Articles -->
    {featuredArticles.length > 0 && (
      <section class="blog-section blog-section--featured">
        <div class="blog-section__container">
          <div class="blog-section__header">
            <h2 class="blog-section__title">Featured Articles</h2>
            <p class="blog-section__subtitle">Our most popular and important reads</p>
          </div>

          <ArticleGrid
            articles={featuredArticles}
            configId="featured"
            emptyMessage="No featured articles yet."
          />
        </div>
      </section>
    )}

    <!-- All Articles -->
    <section class="blog-section">
      <div class="blog-section__container">
        <div class="blog-section__header">
          <h2 class="blog-section__title">
            {currentPage === 1 && featuredArticles.length > 0 ? 'Latest Articles' : 'All Articles'}
          </h2>
          <p class="blog-section__subtitle">
            {currentPage > 1 ? `Page ${currentPage} of ${totalPages}` : 'Stay informed with our latest posts'}
          </p>
        </div>

        <ArticleGrid
          articles={regularArticles}
          configId="listing"
          emptyMessage="No articles yet. Check back soon for our latest property insights and guides."
        />

        <!-- Pagination -->
        {totalPages > 1 && (
          <nav class="pagination" aria-label="Blog pagination">
            {currentPage > 1 && (
              <a href={`/blog?page=${currentPage - 1}`} class="pagination__btn pagination__btn--prev">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                Previous
              </a>
            )}

            <div class="pagination__numbers">
              {Array.from({ length: totalPages }, (_, i) => i + 1).map(page => (
                <a
                  href={`/blog?page=${page}`}
                  class:list={['pagination__number', { 'pagination__number--active': page === currentPage }]}
                  aria-current={page === currentPage ? 'page' : undefined}
                >
                  {page}
                </a>
              ))}
            </div>

            {hasMore && (
              <a href={`/blog?page=${currentPage + 1}`} class="pagination__btn pagination__btn--next">
                Next
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </a>
            )}
          </nav>
        )}
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="blog-cta">
      <div class="blog-cta__container">
        <div class="blog-cta__icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="16" x="2" y="4" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
        </div>
        <h2 class="blog-cta__title">Stay Updated</h2>
        <p class="blog-cta__text">
          Subscribe to our newsletter for the latest property news, market insights, and exclusive content delivered straight to your inbox.
        </p>
        <form class="blog-cta__form">
          <input
            type="email"
            placeholder="Enter your email address"
            class="blog-cta__input"
            required
          />
          <button type="submit" class="blog-cta__btn">
            Subscribe
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" x2="19" y1="12" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </button>
        </form>
        <p class="blog-cta__note">We respect your privacy. Unsubscribe at any time.</p>
      </div>
    </section>

  </div>
</Layout>

<style lang="scss">
  // ========================================
  // DESIGN TOKENS
  // ========================================

  $accent-coral: #FF5A5F;
  $accent-coral-hover: #E74E52;
  $text-primary: #1A1A1A;
  $text-secondary: #6B7280;
  $text-muted: #9CA3AF;
  $bg-white: #FFFFFF;
  $bg-off-white: #FAFAFA;
  $bg-light: #F5F5F5;
  $border-light: #E5E7EB;

  $page-max-width: 1200px;
  $content-max-width: 760px;
  $section-spacing: 80px;
  $section-spacing-mobile: 48px;

  $radius-md: 12px;
  $radius-lg: 16px;
  $radius-xl: 20px;

  $shadow-card: 0 4px 24px rgba(0, 0, 0, 0.06);
  $shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.04);

  $transition-fast: 150ms ease;
  $transition-base: 200ms ease;

  $font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;

  // ========================================
  // PAGE LAYOUT
  // ========================================

  .blog-page {
    background: $bg-white;
    font-family: $font-family;
  }

  // ========================================
  // PAGE HEADER
  // ========================================

  .blog-header {
    padding: 64px 24px 48px;
    text-align: center;
    background: $bg-white;

    @media (max-width: 768px) {
      padding: 40px 20px 32px;
    }
  }

  .blog-header__content {
    max-width: $content-max-width;
    margin: 0 auto;
  }

  .blog-header__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: $text-primary;
    margin: 0 0 16px 0;
    line-height: 1.2;
    letter-spacing: -0.02em;

    @media (max-width: 768px) {
      font-size: 2rem;
    }
  }

  .blog-header__subtitle {
    font-size: 1.125rem;
    color: $text-secondary;
    margin: 0;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;

    @media (max-width: 768px) {
      font-size: 1rem;
    }
  }

  // ========================================
  // STATS SECTION
  // ========================================

  .blog-stats {
    padding: 0 24px 64px;

    @media (max-width: 768px) {
      padding: 0 20px 48px;
    }
  }

  .blog-stats__container {
    max-width: 800px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;

    @media (max-width: 640px) {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }

  .stat-item {
    text-align: center;
    padding: 32px 24px;
    background: $bg-off-white;
    border-radius: $radius-lg;
    transition: transform $transition-base, box-shadow $transition-base;

    &:hover {
      transform: translateY(-2px);
      box-shadow: $shadow-card;
    }

    @media (max-width: 768px) {
      padding: 24px 20px;
    }
  }

  .stat-item__icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: $accent-coral;
    border-radius: $radius-md;

    svg {
      width: 24px;
      height: 24px;
      color: $bg-white;
    }
  }

  .stat-item__value {
    font-size: 2rem;
    font-weight: 700;
    color: $text-primary;
    margin-bottom: 4px;
    letter-spacing: -0.02em;

    @media (max-width: 768px) {
      font-size: 1.75rem;
    }
  }

  .stat-item__label {
    font-size: 0.9375rem;
    color: $text-secondary;
    font-weight: 500;
  }

  // ========================================
  // BLOG SECTION
  // ========================================

  .blog-section {
    padding: $section-spacing 24px;
    background: $bg-white;

    &--featured {
      background: $bg-off-white;
    }

    @media (max-width: 768px) {
      padding: $section-spacing-mobile 20px;
    }
  }

  .blog-section__container {
    max-width: $page-max-width;
    margin: 0 auto;
  }

  .blog-section__header {
    text-align: center;
    margin-bottom: 48px;

    @media (max-width: 768px) {
      margin-bottom: 36px;
    }
  }

  .blog-section__title {
    font-size: 1.75rem;
    font-weight: 700;
    color: $text-primary;
    margin: 0 0 12px 0;
    letter-spacing: -0.01em;

    @media (max-width: 768px) {
      font-size: 1.5rem;
    }
  }

  .blog-section__subtitle {
    font-size: 1rem;
    color: $text-secondary;
    margin: 0;
  }

  // ========================================
  // BLOG GRID
  // ========================================

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;

    &--featured {
      max-width: 1000px;
      margin: 0 auto;
    }

    @media (max-width: 1024px) {
      grid-template-columns: repeat(2, 1fr);
    }

    @media (max-width: 640px) {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }

  // ========================================
  // EMPTY STATE
  // ========================================

  .empty-state {
    text-align: center;
    padding: 64px 24px;
  }

  .empty-state__icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: $bg-off-white;
    border-radius: 50%;

    svg {
      width: 40px;
      height: 40px;
      color: $text-muted;
    }
  }

  .empty-state__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: $text-primary;
    margin: 0 0 8px 0;
  }

  .empty-state__text {
    font-size: 1rem;
    color: $text-secondary;
    margin: 0;
  }

  // ========================================
  // PAGINATION
  // ========================================

  .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    margin-top: 64px;
    padding-top: 32px;
    border-top: 1px solid $border-light;

    @media (max-width: 640px) {
      flex-wrap: wrap;
    }
  }

  .pagination__btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: $bg-white;
    border: 1.5px solid $border-light;
    border-radius: $radius-md;
    font-size: 0.9375rem;
    font-weight: 600;
    color: $text-primary;
    text-decoration: none;
    transition: all $transition-fast;

    &:hover {
      border-color: $accent-coral;
      color: $accent-coral;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba($accent-coral, 0.15);
    }

    svg {
      width: 18px;
      height: 18px;
    }
  }

  .pagination__numbers {
    display: flex;
    gap: 8px;

    @media (max-width: 640px) {
      display: none;
    }
  }

  .pagination__number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: $radius-md;
    font-size: 0.9375rem;
    font-weight: 600;
    color: $text-primary;
    text-decoration: none;
    transition: all $transition-fast;

    &:hover:not(.pagination__number--active) {
      background: $bg-off-white;
    }

    &--active {
      background: $accent-coral;
      color: $bg-white;
      pointer-events: none;
    }
  }

  // ========================================
  // CTA SECTION
  // ========================================

  .blog-cta {
    padding: $section-spacing 24px;
    background: $text-primary;

    @media (max-width: 768px) {
      padding: $section-spacing-mobile 20px;
    }
  }

  .blog-cta__container {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .blog-cta__icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba($bg-white, 0.1);
    border-radius: $radius-lg;

    svg {
      width: 32px;
      height: 32px;
      color: $bg-white;
    }
  }

  .blog-cta__title {
    font-size: 1.75rem;
    font-weight: 700;
    color: $bg-white;
    margin: 0 0 16px 0;
    letter-spacing: -0.01em;

    @media (max-width: 768px) {
      font-size: 1.5rem;
    }
  }

  .blog-cta__text {
    font-size: 1rem;
    color: rgba($bg-white, 0.8);
    margin: 0 0 32px 0;
    line-height: 1.7;

    @media (max-width: 768px) {
      margin-bottom: 24px;
    }
  }

  .blog-cta__form {
    display: flex;
    gap: 12px;
    max-width: 480px;
    margin: 0 auto;

    @media (max-width: 480px) {
      flex-direction: column;
    }
  }

  .blog-cta__input {
    flex: 1;
    height: 52px;
    padding: 0 20px;
    background: rgba($bg-white, 0.95);
    border: none;
    border-radius: $radius-md;
    font-family: $font-family;
    font-size: 1rem;
    color: $text-primary;

    &::placeholder {
      color: $text-muted;
    }

    &:focus {
      outline: 2px solid $accent-coral;
      outline-offset: 2px;
    }
  }

  .blog-cta__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    height: 52px;
    padding: 0 24px;
    background: $accent-coral;
    border: none;
    border-radius: $radius-md;
    font-family: $font-family;
    font-size: 1rem;
    font-weight: 600;
    color: $bg-white;
    cursor: pointer;
    transition: background $transition-fast, transform $transition-fast, box-shadow $transition-fast;
    white-space: nowrap;

    &:hover {
      background: $accent-coral-hover;
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba($accent-coral, 0.3);
    }

    svg {
      width: 18px;
      height: 18px;
    }
  }

  .blog-cta__note {
    font-size: 0.875rem;
    color: rgba($bg-white, 0.6);
    margin: 16px 0 0 0;
  }
</style>
