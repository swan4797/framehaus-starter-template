---
// ========================================
// BLOG LIST PAGE
// Clean, modern blog page aligned with template design
// Uses configurable ArticleGrid component
// ========================================

import Layout from '../../layouts/Layout.astro'
import { ArticleGrid, BlogArticleCard } from '../../components/blog'
import { getBlogArticles } from '../../lib/api'
import { fetchBrandSettings } from '../../lib/brand'

// Fetch brand settings
const brand = await fetchBrandSettings()

// Get pagination from URL
const url = new URL(Astro.request.url)
const currentPage = parseInt(url.searchParams.get('page') || '1')
const limit = 12

// Fetch blog articles
const blogResponse = await getBlogArticles({ page: currentPage, limit })
const articles = blogResponse?.articles || []
const totalArticles = blogResponse?.total || 0
const hasMore = blogResponse?.hasMore || false

// Separate featured and regular articles (only on first page)
const featuredArticles = currentPage === 1 ? articles.filter(a => a.is_featured).slice(0, 3) : []
const regularArticles = currentPage === 1
  ? articles.filter(a => !featuredArticles.some(f => f.article_id === a.article_id))
  : articles

// Calculate pagination
const totalPages = Math.ceil(totalArticles / limit)

const pageTitle = `Blog | ${brand.business_name}`
const pageDescription = `Read the latest property news, market insights, and helpful guides from ${brand.business_name}.`

// Stats
const stats = [
  { value: totalArticles.toString(), label: 'Articles', icon: 'book' },
  { value: articles.reduce((sum, a) => sum + (a.view_count || 0), 0).toLocaleString(), label: 'Total Views', icon: 'eye' },
  { value: 'Weekly', label: 'New Content', icon: 'clock' }
]
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="blog-page">

    <!-- Page Header -->
    <section class="blog-header">
      <div class="blog-header__content">
        <h1 class="blog-header__title">Our Blog</h1>
        <p class="blog-header__subtitle">
          Property insights, market updates, and helpful guides to keep you informed about the local property market.
        </p>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="blog-stats">
      <div class="blog-stats__container">
        {stats.map((stat) => (
          <div class="stat-item">
            <div class="stat-item__icon">
              {stat.icon === 'book' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/>
                </svg>
              )}
              {stat.icon === 'eye' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
              )}
              {stat.icon === 'clock' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              )}
            </div>
            <div class="stat-item__value">{stat.value}</div>
            <div class="stat-item__label">{stat.label}</div>
          </div>
        ))}
      </div>
    </section>

    <!-- Featured Articles -->
    {featuredArticles.length > 0 && (
      <section class="blog-section blog-section--featured">
        <div class="blog-section__container">
          <div class="blog-section__header">
            <h2 class="blog-section__title">Featured Articles</h2>
            <p class="blog-section__subtitle">Our most popular and important reads</p>
          </div>

          <ArticleGrid
            articles={featuredArticles}
            configId="featured"
            emptyMessage="No featured articles yet."
          />
        </div>
      </section>
    )}

    <!-- All Articles -->
    <section class="blog-section">
      <div class="blog-section__container">
        <div class="blog-section__header">
          <h2 class="blog-section__title">
            {currentPage === 1 && featuredArticles.length > 0 ? 'Latest Articles' : 'All Articles'}
          </h2>
          <p class="blog-section__subtitle">
            {currentPage > 1 ? `Page ${currentPage} of ${totalPages}` : 'Stay informed with our latest posts'}
          </p>
        </div>

        <ArticleGrid
          articles={regularArticles}
          configId="listing"
          emptyMessage="No articles yet. Check back soon for our latest property insights and guides."
        />

        <!-- Pagination -->
        {totalPages > 1 && (
          <nav class="pagination" aria-label="Blog pagination">
            {currentPage > 1 && (
              <a href={`/blog?page=${currentPage - 1}`} class="pagination__btn pagination__btn--prev">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                Previous
              </a>
            )}

            <div class="pagination__numbers">
              {Array.from({ length: totalPages }, (_, i) => i + 1).map(page => (
                <a
                  href={`/blog?page=${page}`}
                  class:list={['pagination__number', { 'pagination__number--active': page === currentPage }]}
                  aria-current={page === currentPage ? 'page' : undefined}
                >
                  {page}
                </a>
              ))}
            </div>

            {hasMore && (
              <a href={`/blog?page=${currentPage + 1}`} class="pagination__btn pagination__btn--next">
                Next
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </a>
            )}
          </nav>
        )}
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="blog-cta">
      <div class="blog-cta__container">
        <div class="blog-cta__icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="16" x="2" y="4" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
        </div>
        <h2 class="blog-cta__title">Stay Updated</h2>
        <p class="blog-cta__text">
          Subscribe to our newsletter for the latest property news, market insights, and exclusive content delivered straight to your inbox.
        </p>
        <form class="blog-cta__form">
          <input
            type="email"
            placeholder="Enter your email address"
            class="blog-cta__input"
            required
          />
          <button type="submit" class="blog-cta__btn">
            Subscribe
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" x2="19" y1="12" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </button>
        </form>
        <p class="blog-cta__note">We respect your privacy. Unsubscribe at any time.</p>
      </div>
    </section>

  </div>
</Layout>

<style lang="scss">
  @use '../../styles/pages/blog/list';
</style>
