---
// ========================================
// CONTACT PAGE
// Full contact page with form, map, and info
// ========================================

import Layout from '../layouts/Layout.astro'
import GeneralEnquiryForm from '../components/forms/GeneralEnquiryForm.astro'

// You can fetch agency data here if needed
// const agency = await getAgencyData()

const pageTitle = 'Contact Us'
const pageDescription = 'Get in touch with our team. We\'re here to help with all your property needs.'
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="contact-page">
    <!-- Hero Section -->
    <section class="contact-hero">
      <div class="hero-content">
        <div class="hero-text">
          <h1 class="hero-title">Get in Touch</h1>
          <p class="hero-subtitle">
            Whether you're buying, selling, or renting, our expert team is here to help you every step of the way.
          </p>
          <div class="hero-stats">
            <div class="stat">
              <svg class="stat-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <div>
                <p class="stat-value">24 Hours</p>
                <p class="stat-label">Response Time</p>
              </div>
            </div>
            <div class="stat">
              <svg class="stat-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
              <div>
                <p class="stat-value">1000+</p>
                <p class="stat-label">Happy Clients</p>
              </div>
            </div>
            <div class="stat">
              <svg class="stat-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
              </svg>
              <div>
                <p class="stat-value">15+ Years</p>
                <p class="stat-label">Experience</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="form-section">
      <div class="container">
        <GeneralEnquiryForm 
          title="Send Us a Message"
          subtitle="Fill out the form below and we'll get back to you as soon as possible"
        />
      </div>
    </section>

    <!-- Office Information Grid -->
    <section class="offices-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Our Offices</h2>
          <p class="section-subtitle">Visit us at one of our convenient locations</p>
        </div>
        
        <div class="offices-grid">
          <!-- Main Office -->
          <div class="office-card">
            <div class="office-badge">Main Office</div>
            <h3 class="office-name">Central London</h3>
            <div class="office-details">
              <div class="office-detail">
                <svg class="detail-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <div>
                  <p>123 High Street</p>
                  <p>London, SW1A 1AA</p>
                </div>
              </div>
              <div class="office-detail">
                <svg class="detail-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
                <a href="tel:02012345678">020 1234 5678</a>
              </div>
              <div class="office-detail">
                <svg class="detail-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <div>
                  <p>Mon-Fri: 9:00 AM - 6:00 PM</p>
                  <p>Sat: 9:00 AM - 4:00 PM</p>
                  <p>Sun: Closed</p>
                </div>
              </div>
            </div>
            <a href="#map" class="office-link">
              View on Map
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" x2="19" y1="12" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          </div>

          <!-- Branch Office -->
          <div class="office-card">
            <h3 class="office-name">North London</h3>
            <div class="office-details">
              <div class="office-detail">
                <svg class="detail-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <div>
                  <p>456 Camden Road</p>
                  <p>London, N1 9AA</p>
                </div>
              </div>
              <div class="office-detail">
                <svg class="detail-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
                <a href="tel:02087654321">020 8765 4321</a>
              </div>
              <div class="office-detail">
                <svg class="detail-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <div>
                  <p>Mon-Fri: 9:00 AM - 6:00 PM</p>
                  <p>Sat: 9:00 AM - 4:00 PM</p>
                  <p>Sun: Closed</p>
                </div>
              </div>
            </div>
            <a href="#map" class="office-link">
              View on Map
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" x2="19" y1="12" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          </div>

          <!-- Branch Office -->
          <div class="office-card">
            <h3 class="office-name">South London</h3>
            <div class="office-details">
              <div class="office-detail">
                <svg class="detail-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <div>
                  <p>789 Clapham High Street</p>
                  <p>London, SW4 7AA</p>
                </div>
              </div>
              <div class="office-detail">
                <svg class="detail-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
                <a href="tel:02031234567">020 3123 4567</a>
              </div>
              <div class="office-detail">
                <svg class="detail-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <div>
                  <p>Mon-Fri: 9:00 AM - 6:00 PM</p>
                  <p>Sat: 9:00 AM - 4:00 PM</p>
                  <p>Sun: Closed</p>
                </div>
              </div>
            </div>
            <a href="#map" class="office-link">
              View on Map
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" x2="19" y1="12" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="map-section" id="map">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Find Us</h2>
          <p class="section-subtitle">Visit our main office in Central London</p>
        </div>
        
        <div class="map-container">
          <!-- Replace with your actual Google Maps embed -->
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2483.2867183130237!2d-0.1419!3d51.5074!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487604b900d26973%3A0x4291f3172409ea92!2slondon!5e0!3m2!1sen!2suk!4v1234567890"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
          
          <div class="map-overlay">
            <div class="map-info">
              <h3>Main Office</h3>
              <p>123 High Street, London, SW1A 1AA</p>
              <div class="map-actions">
                <a href="https://maps.google.com/?q=123+High+Street+London+SW1A+1AA" target="_blank" class="map-btn">
                  Get Directions
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" x2="19" y1="12" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Frequently Asked Questions</h2>
          <p class="section-subtitle">Quick answers to common questions</p>
        </div>
        
        <div class="faq-grid">
          <div class="faq-item">
            <h3 class="faq-question">What are your office hours?</h3>
            <p class="faq-answer">
              Our offices are open Monday to Friday from 9:00 AM to 6:00 PM, and Saturdays from 9:00 AM to 4:00 PM. 
              We're closed on Sundays, but you can contact us anytime via our online form.
            </p>
          </div>

          <div class="faq-item">
            <h3 class="faq-question">How quickly will you respond to my enquiry?</h3>
            <p class="faq-answer">
              We aim to respond to all enquiries within 24 hours during business days. Urgent viewing requests and 
              high-priority enquiries are typically handled the same day.
            </p>
          </div>

          <div class="faq-item">
            <h3 class="faq-question">Can I book a property viewing online?</h3>
            <p class="faq-answer">
              Yes! You can request a viewing through our website by visiting any property page and using the 
              "Request a Viewing" form. We'll confirm your appointment within hours.
            </p>
          </div>

          <div class="faq-item">
            <h3 class="faq-question">Do you offer free property valuations?</h3>
            <p class="faq-answer">
              Absolutely! We provide complimentary property valuations with no obligation. Simply fill out our 
              valuation request form, and one of our experts will be in touch within 24 hours.
            </p>
          </div>

          <div class="faq-item">
            <h3 class="faq-question">Which areas do you cover?</h3>
            <p class="faq-answer">
              We have offices across London covering North, South, and Central areas. Our experienced team handles 
              properties throughout Greater London and surrounding areas.
            </p>
          </div>

          <div class="faq-item">
            <h3 class="faq-question">How can I speak to someone directly?</h3>
            <p class="faq-answer">
              You can call any of our offices directly, or use the contact form above and we'll call you back at 
              your preferred time. Our main office number is 020 1234 5678.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <div class="cta-text">
            <h2 class="cta-title">Ready to Get Started?</h2>
            <p class="cta-subtitle">
              Whether you're buying, selling, or renting, our team of experts is here to guide you through every step of your property journey.
            </p>
          </div>
          <div class="cta-actions">
            <a href="#form" class="cta-btn cta-btn-primary">
              Send a Message
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="22" x2="11" y1="2" y2="13"></line>
                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
              </svg>
            </a>
            <a href="/properties" class="cta-btn cta-btn-secondary">
              Browse Properties
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" x2="19" y1="12" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .contact-page {
    font-family: 'Garet', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Hero Section */
  .contact-hero {
    background: linear-gradient(135deg, #3c5b4b 0%, #2d4639 100%);
    color: #f6f4f4;
    padding: 5rem 2rem 4rem;
    position: relative;
    overflow: hidden;
  }

  .contact-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 50%, rgba(246, 244, 244, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero-text {
    max-width: 800px;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.6;
    margin: 0 0 3rem 0;
    opacity: 0.9;
    max-width: 600px;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 700px;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .stat-icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    opacity: 0.9;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.25rem 0;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    margin: 0;
    opacity: 0.8;
  }

  /* Form Section */
  .form-section {
    padding: 6rem 0;
    background: #f9fafb;
  }

  /* Section Headers */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    margin: 0;
    line-height: 1.6;
  }

  /* Offices Section */
  .offices-section {
    padding: 6rem 0;
    background: white;
  }

  .offices-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .office-card {
    background: white;
    border: 1.5px solid #e5e7eb;
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .office-card:hover {
    border-color: #3c5b4b;
    box-shadow: 0 8px 24px rgba(60, 91, 75, 0.12);
    transform: translateY(-4px);
  }

  .office-badge {
    display: inline-block;
    background: linear-gradient(135deg, #3c5b4b 0%, #2d4639 100%);
    color: #f6f4f4;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    margin-bottom: 1rem;
  }

  .office-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 1.5rem 0;
  }

  .office-details {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .office-detail {
    display: flex;
    align-items: flex-start;
    gap: 0.875rem;
  }

  .detail-icon {
    color: #3c5b4b;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .office-detail p {
    font-size: 0.9375rem;
    color: #4b5563;
    margin: 0;
    line-height: 1.6;
  }

  .office-detail a {
    font-size: 0.9375rem;
    color: #3c5b4b;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .office-detail a:hover {
    color: #2d4639;
  }

  .office-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #3c5b4b;
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    transition: gap 0.2s ease;
  }

  .office-link:hover {
    gap: 0.75rem;
  }

  .office-link svg {
    width: 16px;
    height: 16px;
  }

  /* Map Section */
  .map-section {
    padding: 6rem 0;
    background: #f9fafb;
  }

  .map-container {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .map-container iframe {
    display: block;
    width: 100%;
    height: 450px;
  }

  .map-overlay {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    z-index: 10;
  }

  .map-info {
    background: white;
    padding: 1.5rem 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    min-width: 320px;
  }

  .map-info h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 0.5rem 0;
  }

  .map-info p {
    font-size: 0.9375rem;
    color: #6b7280;
    margin: 0 0 1rem 0;
    line-height: 1.5;
  }

  .map-actions {
    display: flex;
    gap: 1rem;
  }

  .map-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: linear-gradient(135deg, #3c5b4b 0%, #2d4639 100%);
    color: #f6f4f4;
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .map-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(60, 91, 75, 0.25);
  }

  .map-btn svg {
    width: 16px;
    height: 16px;
  }

  /* FAQ Section */
  .faq-section {
    padding: 6rem 0;
    background: white;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2.5rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .faq-item {
    padding: 2rem;
    background: #f9fafb;
    border-radius: 12px;
