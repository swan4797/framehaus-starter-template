---
// ========================================
// TEAM PAGE
// Clean, modern team page aligned with template design
// ========================================

import Layout from '../layouts/Layout.astro'
import TeamMemberCard from '../components/team/TeamMemberCard.astro'
import { getTeamMembers } from '../lib/api'
import { fetchBrandSettings, getContactInfo } from '../lib/brand'

// Fetch brand settings
const brand = await fetchBrandSettings()
const contact = getContactInfo(brand)

// Fetch team members
const teamResponse = await getTeamMembers({ limit: 50 })
const allMembers = teamResponse?.members || []

// Separate featured and regular members
const featuredMembers = allMembers.filter(m => m.is_featured)
const regularMembers = allMembers.filter(m => !m.is_featured)

const pageTitle = `Our Team | ${brand.business_name}`
const pageDescription = `Meet the dedicated team at ${brand.business_name}. Our experienced property professionals are here to help with all your real estate needs.`

// Stats
const stats = [
  { value: allMembers.length.toString(), label: 'Team Members', icon: 'users' },
  { value: '15+', label: 'Years Experience', icon: 'check' },
  { value: '98%', label: 'Client Satisfaction', icon: 'star' }
]
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="team-page">

    <!-- Page Header -->
    <section class="team-header">
      <div class="team-header__content">
        <h1 class="team-header__title">Meet Our Team</h1>
        <p class="team-header__subtitle">
          Our dedicated team of property experts brings years of local knowledge and expertise to help you achieve your property goals.
        </p>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="team-stats">
      <div class="team-stats__container">
        {stats.map((stat) => (
          <div class="stat-item">
            <div class="stat-item__icon">
              {stat.icon === 'users' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
              )}
              {stat.icon === 'check' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
              )}
              {stat.icon === 'star' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              )}
            </div>
            <div class="stat-item__value">{stat.value}</div>
            <div class="stat-item__label">{stat.label}</div>
          </div>
        ))}
      </div>
    </section>

    <!-- Featured Team Members -->
    {featuredMembers.length > 0 && (
      <section class="team-section team-section--featured">
        <div class="team-section__container">
          <div class="team-section__header">
            <h2 class="team-section__title">Leadership Team</h2>
            <p class="team-section__subtitle">Meet the people who lead our agency</p>
          </div>

          <div class="team-grid team-grid--featured">
            {featuredMembers.map(member => (
              <TeamMemberCard member={member} featured={true} />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All Team Members -->
    <section class="team-section">
      <div class="team-section__container">
        <div class="team-section__header">
          <h2 class="team-section__title">
            {featuredMembers.length > 0 ? 'Our Team' : 'Meet Our Team'}
          </h2>
          <p class="team-section__subtitle">Dedicated professionals ready to help you</p>
        </div>

        {regularMembers.length > 0 ? (
          <div class="team-grid">
            {regularMembers.map(member => (
              <TeamMemberCard member={member} />
            ))}
          </div>
        ) : allMembers.length === 0 ? (
          <div class="empty-state">
            <div class="empty-state__icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            </div>
            <h3 class="empty-state__title">No team members yet</h3>
            <p class="empty-state__text">Check back soon to meet our team.</p>
          </div>
        ) : null}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="team-cta">
      <div class="team-cta__container">
        <h2 class="team-cta__title">Want to Join Our Team?</h2>
        <p class="team-cta__text">
          We're always looking for talented individuals to join our growing team. If you're passionate about property and delivering excellent customer service, we'd love to hear from you.
        </p>
        <div class="team-cta__actions">
          <a href="/contact" class="team-cta__btn team-cta__btn--primary">
            Get in Touch
          </a>
          {contact.email && (
            <a href={`mailto:${contact.email}?subject=Career%20Enquiry`} class="team-cta__btn team-cta__btn--secondary">
              Email Us
            </a>
          )}
        </div>
      </div>
    </section>

  </div>
</Layout>

<style lang="scss">
  // ========================================
  // DESIGN TOKENS
  // ========================================

  $accent-coral: #FF5A5F;
  $accent-coral-hover: #E74E52;
  $text-primary: #1A1A1A;
  $text-secondary: #6B7280;
  $text-muted: #9CA3AF;
  $bg-white: #FFFFFF;
  $bg-off-white: #FAFAFA;
  $bg-light: #F5F5F5;
  $border-light: #E5E7EB;

  $page-max-width: 1200px;
  $content-max-width: 760px;
  $section-spacing: 80px;
  $section-spacing-mobile: 48px;

  $radius-md: 12px;
  $radius-lg: 16px;
  $radius-xl: 20px;

  $shadow-card: 0 4px 24px rgba(0, 0, 0, 0.06);
  $shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.04);

  $transition-fast: 150ms ease;
  $transition-base: 200ms ease;

  $font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;

  // ========================================
  // PAGE LAYOUT
  // ========================================

  .team-page {
    background: $bg-white;
    font-family: $font-family;
  }

  // ========================================
  // PAGE HEADER
  // ========================================

  .team-header {
    padding: 64px 24px 48px;
    text-align: center;
    background: $bg-white;

    @media (max-width: 768px) {
      padding: 40px 20px 32px;
    }
  }

  .team-header__content {
    max-width: $content-max-width;
    margin: 0 auto;
  }

  .team-header__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: $text-primary;
    margin: 0 0 16px 0;
    line-height: 1.2;
    letter-spacing: -0.02em;

    @media (max-width: 768px) {
      font-size: 2rem;
    }
  }

  .team-header__subtitle {
    font-size: 1.125rem;
    color: $text-secondary;
    margin: 0;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;

    @media (max-width: 768px) {
      font-size: 1rem;
    }
  }

  // ========================================
  // STATS SECTION
  // ========================================

  .team-stats {
    padding: 0 24px 64px;

    @media (max-width: 768px) {
      padding: 0 20px 48px;
    }
  }

  .team-stats__container {
    max-width: 800px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;

    @media (max-width: 640px) {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }

  .stat-item {
    text-align: center;
    padding: 32px 24px;
    background: $bg-off-white;
    border-radius: $radius-lg;
    transition: transform $transition-base, box-shadow $transition-base;

    &:hover {
      transform: translateY(-2px);
      box-shadow: $shadow-card;
    }

    @media (max-width: 768px) {
      padding: 24px 20px;
    }
  }

  .stat-item__icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: $accent-coral;
    border-radius: $radius-md;

    svg {
      width: 24px;
      height: 24px;
      color: $bg-white;
    }
  }

  .stat-item__value {
    font-size: 2rem;
    font-weight: 700;
    color: $text-primary;
    margin-bottom: 4px;
    letter-spacing: -0.02em;

    @media (max-width: 768px) {
      font-size: 1.75rem;
    }
  }

  .stat-item__label {
    font-size: 0.9375rem;
    color: $text-secondary;
    font-weight: 500;
  }

  // ========================================
  // TEAM SECTION
  // ========================================

  .team-section {
    padding: $section-spacing 24px;
    background: $bg-white;

    &--featured {
      background: $bg-off-white;
    }

    @media (max-width: 768px) {
      padding: $section-spacing-mobile 20px;
    }
  }

  .team-section__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .team-section__header {
    text-align: center;
    margin-bottom: 48px;

    @media (max-width: 768px) {
      margin-bottom: 36px;
    }
  }

  .team-section__title {
    font-size: 1.75rem;
    font-weight: 700;
    color: $text-primary;
    margin: 0 0 12px 0;
    letter-spacing: -0.01em;

    @media (max-width: 768px) {
      font-size: 1.5rem;
    }
  }

  .team-section__subtitle {
    font-size: 1rem;
    color: $text-secondary;
    margin: 0;
  }

  // ========================================
  // TEAM GRID
  // ========================================

  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;

    &--featured {
      grid-template-columns: repeat(3, 1fr);
      max-width: 1024px;
      margin: 0 auto;
    }

    @media (max-width: 1200px) {
      grid-template-columns: repeat(3, 1fr);

      &--featured {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    @media (max-width: 900px) {
      grid-template-columns: repeat(2, 1fr);

      &--featured {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 640px) {
      grid-template-columns: 1fr;
      gap: 20px;

      &--featured {
        grid-template-columns: 1fr;
      }
    }
  }

  // ========================================
  // EMPTY STATE
  // ========================================

  .empty-state {
    text-align: center;
    padding: 64px 24px;
  }

  .empty-state__icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: $bg-off-white;
    border-radius: 50%;

    svg {
      width: 40px;
      height: 40px;
      color: $text-muted;
    }
  }

  .empty-state__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: $text-primary;
    margin: 0 0 8px 0;
  }

  .empty-state__text {
    font-size: 1rem;
    color: $text-secondary;
    margin: 0;
  }

  // ========================================
  // CTA SECTION
  // ========================================

  .team-cta {
    padding: $section-spacing 24px;
    background: $text-primary;

    @media (max-width: 768px) {
      padding: $section-spacing-mobile 20px;
    }
  }

  .team-cta__container {
    max-width: $content-max-width;
    margin: 0 auto;
    text-align: center;
  }

  .team-cta__title {
    font-size: 1.75rem;
    font-weight: 700;
    color: $bg-white;
    margin: 0 0 16px 0;
    letter-spacing: -0.01em;

    @media (max-width: 768px) {
      font-size: 1.5rem;
    }
  }

  .team-cta__text {
    font-size: 1rem;
    color: rgba($bg-white, 0.8);
    margin: 0 0 32px 0;
    line-height: 1.7;

    @media (max-width: 768px) {
      margin-bottom: 24px;
    }
  }

  .team-cta__actions {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;

    @media (min-width: 480px) {
      flex-direction: row;
      justify-content: center;
      gap: 16px;
    }
  }

  .team-cta__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 52px;
    padding: 0 32px;
    font-family: $font-family;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: $radius-md;
    transition: background $transition-fast, transform $transition-fast, box-shadow $transition-fast;

    @media (max-width: 479px) {
      width: 100%;
    }

    &--primary {
      background: $accent-coral;
      color: $bg-white;

      &:hover {
        background: $accent-coral-hover;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba($accent-coral, 0.3);
      }
    }

    &--secondary {
      background: transparent;
      color: $bg-white;
      border: 1.5px solid rgba($bg-white, 0.3);

      &:hover {
        background: rgba($bg-white, 0.1);
        border-color: rgba($bg-white, 0.5);
        transform: translateY(-1px);
      }
    }
  }
</style>
