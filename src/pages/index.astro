---
// ========================================
// HOMEPAGE
// UK Estate Agent Homepage - Clean Modern Design
// Dynamic content from Stratos CRM
// ========================================

import Layout from '../layouts/Layout.astro'
import { searchProperties } from '../lib/api'
import PropertyCard from '../components/properties/PropertyCard.astro'
import PropertySearch from '../components/search/PropertySearch.astro'
import Hero from '../components/Hero.astro'
import { siteConfig } from '../lib/config'

// Brand utilities
import {
  fetchBrandSettings,
  getContactInfo,
  getSocialLinks,
} from '../lib/brand'

// Page content utilities
import {
  getPageContent,
  getSectionTitle,
  getSectionContent,
  getSectionImage,
  hasSection,
} from '../lib/pages'

// Fetch brand settings
const brand = await fetchBrandSettings(true)
const contact = getContactInfo(brand)

// Fetch homepage content from Stratos CRM
const pageContent = await getPageContent('homepage')

// ========================================
// SPECIFIC SECTION BLOCK KEYS
// These match the block_keys from Stratos CRM
// ========================================

// Featured Properties section (block_key: featured_properties)
const featuredTitle = getSectionTitle(pageContent, 'featured_properties', 'Featured Properties')
const featuredContent = getSectionContent(pageContent, 'featured_properties', '<p>Discover our handpicked selection of premium properties.</p>')

// Why Choose Us section (block_key: why_choose_us)
const whyChooseTitle = getSectionTitle(pageContent, 'why_choose_us', 'Why Choose Us')
const whyChooseContent = getSectionContent(pageContent, 'why_choose_us', '')

// Testimonials section (block_key: testimonials)
const testimonialsTitle = getSectionTitle(pageContent, 'testimonials', 'What Our Clients Say')
const testimonialsContent = getSectionContent(pageContent, 'testimonials', '')

// Check which sections exist in CRM
const hasFeaturedSection = hasSection(pageContent, 'featured_properties')
const hasWhyChooseSection = hasSection(pageContent, 'why_choose_us')
const hasTestimonialsSection = hasSection(pageContent, 'testimonials')

// Fetch all properties (mixed sale and let)
const allPropertiesResponse = await searchProperties({ limit: 6, sort_by: 'newest' })
const allProperties = allPropertiesResponse?.properties || []

// Property showcase images for hero
const propertyImages = [
  { src: 'https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=600&q=80', alt: 'Modern home exterior' },
  { src: 'https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=600&q=80', alt: 'Luxury property' },
  { src: 'https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?w=600&q=80', alt: 'Contemporary house' },
  { src: 'https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=600&q=80', alt: 'Property interior' },
]
---

<Layout>
  <!-- Hero Section -->
  <Hero
    headline={brand.tagline || "Find your perfect home with expert local guidance"}
    description={brand.mission_statement || "Discover exceptional properties with personalized service from our experienced local team."}
    ctaText="Start your search"
    ctaLink="/search"
    images={propertyImages}
  />

  <!-- Property Search -->
  <PropertySearch
    placeholder="Search by location, postcode or keyword"
    showListingType={true}
    showPropertyType={true}
    showMaxPrice={true}
  />

  <!-- Latest Properties -->
  {allProperties.length > 0 && (
    <section class="property-section">
      <div class="property-section__container">
        <div class="property-section__header">
          <div class="property-section__title-group">
            <h2 class="property-section__title">{featuredTitle}</h2>
            {hasFeaturedSection && featuredContent ? (
              <div class="property-section__subtitle" set:html={featuredContent} />
            ) : (
              <p class="property-section__subtitle">Our latest properties for sale and to rent</p>
            )}
          </div>
          <div class="property-section__controls">
            <div class="slider-nav">
              <button class="slider-nav__btn slider-nav__btn--prev" id="slider-prev" aria-label="Previous">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
              </button>
              <button class="slider-nav__btn slider-nav__btn--next" id="slider-next" aria-label="Next">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </button>
            </div>
            <a href="/search" class="property-section__link">
              View all
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>

        <div class="property-slider" id="property-slider">
          <div class="property-slider__track">
            {allProperties.map(property => (
              <div class="property-slider__item">
                <PropertyCard property={property} source="homepage" />
              </div>
            ))}
          </div>
        </div>

        <div class="property-section__mobile-cta">
          <a href="/search" class="hero__cta">
            View All Properties
          </a>
        </div>
      </div>
    </section>
  )}

  <script>
    // Property slider navigation
    const slider = document.getElementById('property-slider');
    const prevBtn = document.getElementById('slider-prev');
    const nextBtn = document.getElementById('slider-next');

    if (slider && prevBtn && nextBtn) {
      const track = slider.querySelector('.property-slider__track');
      const items = slider.querySelectorAll('.property-slider__item');

      const getScrollAmount = () => {
        if (!items.length) return 300;
        const item = items[0] as HTMLElement;
        const style = window.getComputedStyle(track);
        const gap = parseInt(style.gap) || 24;
        return item.offsetWidth + gap;
      };

      prevBtn.addEventListener('click', () => {
        slider.scrollBy({ left: -getScrollAmount(), behavior: 'smooth' });
      });

      nextBtn.addEventListener('click', () => {
        slider.scrollBy({ left: getScrollAmount(), behavior: 'smooth' });
      });

      // Update button states on scroll
      const updateButtons = () => {
        const isAtStart = slider.scrollLeft <= 0;
        const isAtEnd = slider.scrollLeft >= slider.scrollWidth - slider.clientWidth - 10;

        prevBtn.classList.toggle('slider-nav__btn--disabled', isAtStart);
        nextBtn.classList.toggle('slider-nav__btn--disabled', isAtEnd);
      };

      slider.addEventListener('scroll', updateButtons);
      updateButtons();
    }
  </script>

  <!-- Why Choose Us (block_key: why_choose_us) -->
  <section class="why-us">
    <div class="why-us__container">
      <div class="why-us__header">
        <span class="why-us__label">Why us</span>
        <h2 class="why-us__title">{whyChooseTitle || `Why Choose ${brand.business_name}?`}</h2>
        {hasWhyChooseSection && whyChooseContent ? (
          <div class="why-us__subtitle" set:html={whyChooseContent} />
        ) : (
          <p class="why-us__subtitle">We combine local expertise with modern technology to deliver exceptional results</p>
        )}
      </div>

      <div class="why-us__grid">
        <div class="why-us__item">
          <div class="why-us__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
          </div>
          <div class="why-us__item-content">
            <h3 class="why-us__item-title">Local Experts</h3>
            <p class="why-us__item-desc">In-depth knowledge of the area, schools, transport and amenities</p>
          </div>
        </div>

        <div class="why-us__item">
          <div class="why-us__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M3 3v18h18"/>
              <path d="M18 17V9M13 17V5M8 17v-3"/>
            </svg>
          </div>
          <div class="why-us__item-content">
            <h3 class="why-us__item-title">Data-Driven Marketing</h3>
            <p class="why-us__item-desc">Track your property's performance with detailed analytics</p>
          </div>
        </div>

        <div class="why-us__item">
          <div class="why-us__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M23 19a2 2 0 01-2 2H3a2 2 0 01-2-2V8a2 2 0 012-2h4l2-3h6l2 3h4a2 2 0 012 2z"/>
              <circle cx="12" cy="13" r="4"/>
            </svg>
          </div>
          <div class="why-us__item-content">
            <h3 class="why-us__item-title">Professional Media</h3>
            <p class="why-us__item-desc">High-quality photography, floor plans and virtual tours</p>
          </div>
        </div>

        <div class="why-us__item">
          <div class="why-us__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
              <circle cx="8.5" cy="7" r="4"/>
              <path d="M20 8v6M23 11h-6"/>
            </svg>
          </div>
          <div class="why-us__item-content">
            <h3 class="why-us__item-title">Personal Service</h3>
            <p class="why-us__item-desc">Dedicated agent guiding you from valuation to completion</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  {brand.about_text && (
    <section class="about-section">
      <div class="about-section__container">
        <div class="about-section__grid">
          <div class="about-section__content">
            <h2 class="about-section__title">About {brand.business_name}</h2>
            <p class="about-section__text">{brand.about_text}</p>

            <div class="about-section__stats">
              <div class="about-section__stat">
                <div class="about-section__stat-value">500+</div>
                <div class="about-section__stat-label">Properties Sold</div>
              </div>
              <div class="about-section__stat">
                <div class="about-section__stat-value">98%</div>
                <div class="about-section__stat-label">Customer Satisfaction</div>
              </div>
              <div class="about-section__stat">
                <div class="about-section__stat-value">Â£450M+</div>
                <div class="about-section__stat-label">Properties Transacted</div>
              </div>
              <div class="about-section__stat">
                <div class="about-section__stat-value">15+</div>
                <div class="about-section__stat-label">Years Experience</div>
              </div>
            </div>

            <a href="/about" class="about-section__link">
              Learn more about us
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <div class="about-section__image-wrapper">
            {brand.about_image_url ? (
              <img src={brand.about_image_url} alt={`About ${brand.business_name}`} class="about-section__image" />
            ) : (
              <div class="about-section__image about-section__image--placeholder">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/>
                  <polyline points="9,22 9,12 15,12 15,22"/>
                </svg>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Banner -->
  <section class="cta-banner">
    <div class="cta-banner__container">
      <div class="cta-banner__content">
        <h2 class="cta-banner__title">Thinking of Selling or Letting?</h2>
        <p class="cta-banner__subtitle">Get an instant online valuation or book a free home visit with our local experts</p>
      </div>

      <div class="cta-banner__actions">
        <a href="/valuation" class="cta-banner__btn-primary">
          Get Free Valuation
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        {contact.phone && (
          <a href={`tel:${contact.phone}`} class="cta-banner__btn-secondary">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
            </svg>
            Call Us
          </a>
        )}
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="newsletter">
    <div class="newsletter__container">
      <h2 class="newsletter__title">Stay Updated on Local Property</h2>
      <p class="newsletter__text">Get the latest properties and market insights delivered to your inbox</p>

      <form class="newsletter__form">
        <input type="email" class="newsletter__input" placeholder="Your email address" required />
        <button type="submit" class="newsletter__submit">Subscribe</button>
      </form>

      <p class="newsletter__disclaimer">We respect your privacy. Unsubscribe at any time.</p>
    </div>
  </section>
</Layout>

<style lang="scss">
  @use '../styles/pages/homepage';
</style>
