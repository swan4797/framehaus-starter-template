---
import Layout from '../../layouts/Layout.astro'
import ImageGallery from '../../components/property/ImageGallery.astro'
import PropertyInfo from '../../components/property/PropertyInfo.astro'
import PropertyFeatures from '../../components/property/PropertyFeatures.astro'
import PropertyDescription from '../../components/property/PropertyDescription.astro'
import PropertyLocation from '../../components/property/PropertyLocation.astro'
import PropertyFloorplan from '../../components/property/PropertyFloorplan.astro'
import PropertyEPC from '../../components/property/PropertyEPC.astro'
import ViewingRequestForm from '../../components/property/ViewingRequestForm.astro'
import PropertyActions from '../../components/property/PropertyActions.astro'
import RelatedProperties from '../../components/property/RelatedProperties.astro'
import PropertyBreadcrumb from '../../components/property/PropertyBreadcrumb.astro'

const { slug } = Astro.params

// Extract property ID from slug (format: {id}-{address-slug})
const propertyId = slug?.split('-')[0]

if (!propertyId) {
  return Astro.redirect('/properties/search')
}

const AGENCY_ID = import.meta.env.PUBLIC_AGENCY_ID
const API_ENDPOINT = import.meta.env.PUBLIC_STRATOS_API_ENDPOINT
const API_KEY = import.meta.env.PUBLIC_STRATOS_API_KEY

// Fetch property details (SSR)
let propertyData = null
let error = null

try {
  const response = await fetch(`${API_ENDPOINT}/get-property-detail`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Authorization': `Bearer ${API_KEY}`
    },
    body: JSON.stringify({
      property_id: propertyId,
      agency_id: AGENCY_ID
    })
  })

  if (response.ok) {
    propertyData = await response.json()
  } else if (response.status === 404) {
    return Astro.redirect('/properties/search')
  } else {
    error = 'Failed to load property'
  }
} catch (e) {
  error = e.message
}

if (!propertyData || error) {
  return Astro.redirect('/properties/search')
}

const { property, similar_properties } = propertyData

// SEO metadata
const price = property.listing_type === 'sale' 
  ? `£${property.asking_price?.toLocaleString()}`
  : `£${property.rent_amount?.toLocaleString()}/${property.rent_frequency === 'weekly' ? 'pw' : 'pcm'}`

const pageTitle = `${property.display_address} - ${price}`
const pageDescription = property.summary || `${property.bedrooms} bedroom ${property.property_type} ${property.listing_type === 'sale' ? 'for sale' : 'to rent'} in ${property.city}. ${price}.`
const primaryImage = property.media.images[0]?.file_url

// Schema.org structured data
const schema = {
  "@context": "https://schema.org",
  "@type": property.listing_type === 'sale' ? "RealEstateListing" : "RentAction",
  "name": property.display_address,
  "description": property.summary,
  "url": Astro.url.toString(),
  "image": primaryImage,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": property.address_line_1,
    "addressLocality": property.city,
    "addressRegion": property.county,
    "postalCode": property.postcode,
    "addressCountry": "GB"
  },
  "geo": property.latitude && property.longitude ? {
    "@type": "GeoCoordinates",
    "latitude": property.latitude,
    "longitude": property.longitude
  } : undefined,
  "numberOfBedrooms": property.bedrooms,
  "numberOfBathroomsTotal": property.bathrooms,
  "floorSize": property.internal_area ? {
    "@type": "QuantitativeValue",
    "value": property.internal_area,
    "unitCode": property.area_unit === 'sqft' ? "FTK" : "MTK"
  } : undefined,
  "offers": {
    "@type": "Offer",
    "price": property.listing_type === 'sale' ? property.asking_price : property.rent_amount,
    "priceCurrency": "GBP",
    "availability": "https://schema.org/InStock",
    "url": Astro.url.toString()
  }
}
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  ogImage={primaryImage}
>
  <!-- Schema.org markup -->
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <div class="min-h-screen bg-gray-50">
    <!-- Breadcrumb -->
    <div class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-4">
        <PropertyBreadcrumb property={property} />
      </div>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column: Property Details -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Image Gallery -->
          <ImageGallery 
            images={property.media.images}
            videos={property.media.videos}
            virtualTours={property.media.virtual_tours}
            address={property.display_address}
          />

          <!-- Property Actions (Share, Save, Print) -->
          <PropertyActions property={property} />

          <!-- Property Info -->
          <PropertyInfo property={property} />

          <!-- Key Features -->
          {property.key_features && property.key_features.length > 0 && (
            <PropertyFeatures features={property.key_features} />
          )}

          <!-- Description -->
          {property.description && (
            <PropertyDescription description={property.description} />
          )}

          <!-- Floorplan -->
          {property.media.floorplans && property.media.floorplans.length > 0 && (
            <PropertyFloorplan floorplans={property.media.floorplans} />
          )}

          <!-- Location & Map -->
          <PropertyLocation property={property} />

          <!-- EPC Certificate -->
          {property.epc_rating && (
            <PropertyEPC 
              rating={property.epc_rating}
              currentScore={property.epc_current_score}
              potentialScore={property.epc_potential_score}
              expiresAt={property.epc_expires_at}
              certificate={property.media.epc}
            />
          )}
        </div>

        <!-- Right Column: Contact Form (Sticky) -->
        <div class="lg:col-span-1">
          <div class="sticky top-8 space-y-6">
            <ViewingRequestForm property={property} />

            <!-- Branch Contact Info -->
            {property.branches && (
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="font-bold text-gray-900 mb-4">Contact Branch</h3>
                <div class="space-y-3">
                  <p class="font-medium text-gray-900">{property.branches.branch_name}</p>
                  <div class="space-y-2 text-sm text-gray-600">
                    <p class="flex items-center gap-2">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                      <a href={`tel:${property.branches.phone}`} class="hover:text-[#064728]">
                        {property.branches.phone}
                      </a>
                    </p>
                    <p class="flex items-center gap-2">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      <a href={`mailto:${property.branches.email}`} class="hover:text-[#064728]">
                        {property.branches.email}
                      </a>
                    </p>
                    <p class="flex items-start gap-2">
                      <svg class="h-4 w-4 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      <span>
                        {property.branches.address_line_1}<br />
                        {property.branches.city}, {property.branches.postcode}
                      </span>
                    </p>
                  </div>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>

      <!-- Related Properties -->
      {similar_properties && similar_properties.length > 0 && (
        <div class="mt-16">
          <RelatedProperties properties={similar_properties} />
        </div>
      )}
    </div>
  </div>

  <!-- Initialize tracking -->
  <script define:vars={{ propertyId }}>
    // Track property detail view
    if (window.StratosTracker) {
      window.StratosTracker.track('property_detail_view', {
        property_id: propertyId
      })
    }

    // Track time on page
    let startTime = Date.now()
    
    window.addEventListener('beforeunload', () => {
      const timeSpent = Math.floor((Date.now() - startTime) / 1000)
      
      if (window.StratosTracker && timeSpent > 5) {
        window.StratosTracker.track('property_detail_time', {
          property_id: propertyId,
          time_seconds: timeSpent
        })
      }
    })
  </script>
</Layout>