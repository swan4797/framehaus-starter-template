---
// ========================================
// PROPERTY DETAILS PAGE
// Clean, modern property details page
// Design: Consistent with template theme
// ========================================

export const prerender = false

import Layout from '../../../layouts/Layout.astro'
import ImageGallery from '../../../components/propertydetails/ImageGallery.astro'
import ViewingRequestForm from '../../../components/forms/ViewingRequestForm.astro'
import { getPropertyDetails } from '../../../lib/api'
import {
  extractPropertyIdFromUrl,
  getDisplayPrice,
  formatPropertyType,
  formatDate,
  getStatusBadgeText,
  pluralize,
} from '../../../lib/utils'
import { PropertyMapSection } from '../../../components/map/PropertyMapIframe'
import { SimilarProperties } from '../../../components/propertydetails/SimilarProperties'
import { fetchBrandSettings, getContactInfo } from '../../../lib/brand'

// Fetch property
const propertyId = extractPropertyIdFromUrl(Astro.url.pathname)

if (!propertyId) {
  return Astro.redirect('/search')
}

const property = await getPropertyDetails(propertyId)

if (!property) {
  return Astro.redirect('/search')
}

// Fetch brand settings for contact info
const brand = await fetchBrandSettings()
const contact = getContactInfo(brand)

// Computed values
const displayPrice = getDisplayPrice(property)
const propertyType = formatPropertyType(property.property_type)
const listedDate = property.listed_date ? formatDate(property.listed_date) : null
const statusText = getStatusBadgeText(property.listing_status)
const hasLocation = property.latitude && property.longitude

// Filter floorplan images
const floorplanImages = (property.property_media || []).filter(
  (media) => media.media_type === 'floorplan'
)

// Filter EPC certificate images
const epcImages = (property.property_media || []).filter(
  (media) => media.media_type === 'epc'
)

// EPC data
const hasEpcData = property.epc_rating || property.epc_current_score || epcImages.length > 0

// Structured data for SEO
const structuredData = {
  '@context': 'https://schema.org',
  '@type': property.listing_type === 'sale' ? 'RealEstateListing' : 'Apartment',
  name: property.display_address,
  description: property.description || property.summary,
  address: {
    '@type': 'PostalAddress',
    streetAddress: property.address_line_1,
    addressLocality: property.city,
    addressRegion: property.county,
    postalCode: property.postcode,
    addressCountry: property.country_code,
  },
}

// Page metadata
const pageTitle = `${property.display_address} - ${propertyType}`
const pageDescription = property.summary || `${propertyType} in ${property.city || property.postcode}`
---

<Layout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <div class="property-page">
    <!-- Breadcrumbs -->
    <nav class="breadcrumbs" aria-label="Breadcrumb">
      <div class="breadcrumbs__container">
        <ol class="breadcrumbs__list">
          <li><a href="/">Home</a></li>
          <li>
            <a href={`/search?listing_type=${property.listing_type}`}>
              {property.listing_type === 'sale' ? 'For Sale' : 'To Rent'}
            </a>
          </li>
          <li class="current">{property.display_address}</li>
        </ol>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="property-main">
      <div class="property-main__container">
        <div class="property-layout">
          <!-- Left Column -->
          <div class="property-content">
            <!-- Gallery -->
            <section class="gallery-section">
              <ImageGallery
                images={property.property_media || []}
                propertyAddress={property.display_address}
                propertyId={property.id}
              />
            </section>

            <!-- Property Header -->
            <section class="property-header">
              <div class="property-header__top">
                <div>
                  <h1 class="property-header__title">{property.display_address}</h1>
                  <p class="property-header__location">
                    {property.city && `${property.city}, `}{property.postcode}
                  </p>
                </div>
                {property.listing_status !== 'available' && (
                  <span class="status-badge">{statusText}</span>
                )}
              </div>

              <div class="property-header__info">
                <div class="price-block">
                  <span class="price-block__value">{displayPrice}</span>
                  <span class="price-block__label">
                    {property.listing_type === 'sale' ? 'For Sale' : 'Per Month'}
                  </span>
                </div>

                <div class="features-block">
                  <div class="feature-item">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/>
                      <polyline points="9 22 9 12 15 12 15 22"/>
                    </svg>
                    <span class="feature-item__value">{property.bedrooms}</span>
                    <span class="feature-item__label">{pluralize(property.bedrooms, 'Bed')}</span>
                  </div>

                  {property.bathrooms > 0 && (
                    <div class="feature-item">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 12h16a2 2 0 012 2v2a4 4 0 01-4 4H6a4 4 0 01-4-4v-2a2 2 0 012-2z"/>
                        <path d="M6 12V5a2 2 0 012-2h1"/>
                        <path d="M6 20v2"/>
                        <path d="M18 20v2"/>
                      </svg>
                      <span class="feature-item__value">{property.bathrooms}</span>
                      <span class="feature-item__label">{pluralize(property.bathrooms, 'Bath')}</span>
                    </div>
                  )}

                  {property.receptions && property.receptions > 0 && (
                    <div class="feature-item">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2"/>
                        <path d="M3 9h18"/>
                      </svg>
                      <span class="feature-item__value">{property.receptions}</span>
                      <span class="feature-item__label">{pluralize(property.receptions, 'Reception')}</span>
                    </div>
                  )}
                </div>
              </div>

              <div class="property-header__meta">
                <span>{propertyType}</span>
                {property.tenure && <span>{property.tenure}</span>}
                {listedDate && <span>Listed {listedDate}</span>}
              </div>
            </section>

            <!-- Description -->
            {property.description && (
              <section class="content-section">
                <h2 class="content-section__title">Property Description</h2>
                <div class="content-section__body prose">
                  {property.description}
                </div>
              </section>
            )}

            <!-- Key Features -->
            {property.key_features && property.key_features.length > 0 && (
              <section class="content-section">
                <h2 class="content-section__title">Key Features</h2>
                <ul class="features-grid">
                  {property.key_features.map(feature => (
                    <li class="features-grid__item">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"/>
                      </svg>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
              </section>
            )}

            <!-- EPC -->
            {hasEpcData && (
              <section class="content-section">
                <h2 class="content-section__title">Energy Performance</h2>
                <div class="epc-content">
                  {/* EPC Rating & Scores */}
                  {(property.epc_rating || property.epc_current_score) && (
                    <div class="epc-summary">
                      {property.epc_rating && (
                        <div class="epc-rating" data-rating={property.epc_rating}>
                          <span class="epc-rating__badge">{property.epc_rating}</span>
                          <span class="epc-rating__label">EPC Rating</span>
                        </div>
                      )}
                      {property.epc_current_score && (
                        <div class="epc-score">
                          <span class="epc-score__value">{property.epc_current_score}</span>
                          <span class="epc-score__label">Current Score</span>
                        </div>
                      )}
                      {property.epc_potential_score && (
                        <div class="epc-score">
                          <span class="epc-score__value">{property.epc_potential_score}</span>
                          <span class="epc-score__label">Potential Score</span>
                        </div>
                      )}
                    </div>
                  )}

                  {/* EPC Certificate Image */}
                  {epcImages.length > 0 && (
                    <div class="epc-certificate">
                      {epcImages.map((media) => (
                        <a
                          href={media.file_url}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="epc-certificate__link"
                        >
                          <img
                            src={media.file_url}
                            alt={media.alt_text || `EPC Certificate for ${property.display_address}`}
                            loading="lazy"
                          />
                        </a>
                      ))}
                    </div>
                  )}
                </div>
              </section>
            )}

            <!-- Floorplan -->
            {floorplanImages.length > 0 && (
              <section class="content-section">
                <h2 class="content-section__title">Floorplan</h2>
                <div class="floorplan-grid">
                  {floorplanImages.map((media) => (
                    <a
                      href={media.file_url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="floorplan-item"
                    >
                      <img
                        src={media.file_url}
                        alt={media.alt_text || `Floorplan for ${property.display_address}`}
                        loading="lazy"
                      />
                      {media.caption && (
                        <span class="floorplan-item__caption">{media.caption}</span>
                      )}
                    </a>
                  ))}
                </div>
              </section>
            )}

            <!-- Map -->
            {hasLocation && (
              <section class="content-section">
                <div class="map-wrapper">
                  <PropertyMapSection
                    latitude={property.latitude}
                    longitude={property.longitude}
                    address={property.display_address}
                    postcode={property.postcode}
                    displayAddress={property.display_address}
                    provider="openstreetmap"
                    client:only="react"
                  />
                </div>
              </section>
            )}

            <!-- Similar Properties -->
            <section class="similar-section">
              <SimilarProperties
                propertyId={property.id}
                listingType={property.listing_type}
                limit={4}
                client:only="react"
              />
            </section>
          </div>

          <!-- Right Column: Sidebar -->
          <aside class="property-sidebar">
            <div class="sidebar-sticky">
              <!-- Viewing Form -->
              <ViewingRequestForm property={property} />

              <!-- Contact Card -->
              <div class="sidebar-card">
                <h3 class="sidebar-card__title">Contact Us</h3>
                <p class="sidebar-card__text">Speak to our team about this property</p>
                <div class="sidebar-card__buttons">
                  {contact.phone && (
                    <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="btn btn--primary">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z"/>
                      </svg>
                      {contact.phone}
                    </a>
                  )}
                  {contact.email && (
                    <a href={`mailto:${contact.email}?subject=Enquiry about ${property.display_address}`} class="btn btn--outline">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                        <polyline points="22,6 12,13 2,6"/>
                      </svg>
                      Email Us
                    </a>
                  )}
                </div>
              </div>

              <!-- Share Card -->
              <div class="sidebar-card sidebar-card--compact">
                <h3 class="sidebar-card__title sidebar-card__title--center">Share Property</h3>
                <div class="share-buttons">
                  <button class="share-btn" id="share-copy" title="Copy Link">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                      <path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1"/>
                    </svg>
                  </button>
                  <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener noreferrer" class="share-btn" title="Share on Facebook">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </a>
                  <a href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(property.display_address)}`} target="_blank" rel="noopener noreferrer" class="share-btn" title="Share on X">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  </a>
                  <a href={`https://wa.me/?text=${encodeURIComponent(property.display_address + ' - ' + Astro.url.href)}`} target="_blank" rel="noopener noreferrer" class="share-btn" title="Share on WhatsApp">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </main>
  </div>

  <!-- Tracking Script -->
  <script define:vars={{ propertyId: property.id }}>
    const trackProperty = () => {
      if (window.StratosTracker) {
        window.StratosTracker.trackPropertyView(propertyId);
        window.StratosTracker.setupPropertyDurationTracking(propertyId);
      }
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', trackProperty);
    } else {
      trackProperty();
    }

    // Copy link functionality
    document.addEventListener('DOMContentLoaded', () => {
      const shareCopy = document.getElementById('share-copy');
      if (shareCopy) {
        shareCopy.addEventListener('click', async () => {
          try {
            await navigator.clipboard.writeText(window.location.href);
            shareCopy.classList.add('copied');
            setTimeout(() => shareCopy.classList.remove('copied'), 2000);
          } catch (err) {
            console.error('Failed to copy:', err);
          }
        });
      }
    });
  </script>
</Layout>

<style lang="scss">
  // ========================================
  // DESIGN TOKENS
  // ========================================

  $accent-coral: #FF5A5F;
  $accent-coral-hover: #E74E52;
  $text-primary: #1A1A1A;
  $text-secondary: #6B7280;
  $text-muted: #9CA3AF;
  $bg-white: #FFFFFF;
  $bg-off-white: #FAFAFA;
  $bg-light: #F5F5F5;
  $border-light: #E5E7EB;
  $border-medium: #D1D5DB;

  $page-max-width: 1200px;
  $sidebar-width: 380px;

  $radius-sm: 8px;
  $radius-md: 12px;
  $radius-lg: 16px;

  $shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.06);
  $shadow-card: 0 4px 16px rgba(0, 0, 0, 0.08);

  $transition-fast: 150ms ease;
  $transition-base: 200ms ease;

  $font-family: 'Inter', system-ui, -apple-system, sans-serif;

  // ========================================
  // PAGE LAYOUT
  // ========================================

  .property-page {
    background: $bg-off-white;
    font-family: $font-family;
    min-height: 100vh;
  }

  // ========================================
  // BREADCRUMBS
  // ========================================

  .breadcrumbs {
    background: $bg-white;
    border-bottom: 1px solid $border-light;
    padding: 16px 24px;

    @media (max-width: 768px) {
      padding: 12px 16px;
    }
  }

  .breadcrumbs__container {
    max-width: $page-max-width;
    margin: 0 auto;
  }

  .breadcrumbs__list {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.875rem;

    li {
      display: flex;
      align-items: center;

      &:not(:last-child)::after {
        content: '/';
        margin-left: 8px;
        color: $border-medium;
      }
    }

    a {
      color: $text-muted;
      text-decoration: none;
      transition: color $transition-fast;

      &:hover {
        color: $accent-coral;
      }
    }

    .current {
      color: $text-primary;
      font-weight: 500;
      max-width: 300px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;

      @media (max-width: 768px) {
        max-width: 180px;
      }
    }
  }

  // ========================================
  // MAIN LAYOUT
  // ========================================

  .property-main {
    padding: 32px 24px 64px;

    @media (max-width: 768px) {
      padding: 24px 16px 48px;
    }
  }

  .property-main__container {
    max-width: $page-max-width;
    margin: 0 auto;
  }

  .property-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;

    @media (min-width: 1024px) {
      grid-template-columns: 1fr $sidebar-width;
      gap: 40px;
    }
  }

  .property-content {
    display: flex;
    flex-direction: column;
    gap: 24px;

    @media (min-width: 768px) {
      gap: 32px;
    }
  }

  // ========================================
  // GALLERY SECTION
  // ========================================

  .gallery-section {
    background: $bg-white;
    border-radius: $radius-lg;
    overflow: hidden;
    box-shadow: $shadow-card;
  }

  // ========================================
  // PROPERTY HEADER
  // ========================================

  .property-header {
    background: $bg-white;
    border-radius: $radius-lg;
    padding: 24px;
    box-shadow: $shadow-sm;

    @media (min-width: 768px) {
      padding: 32px;
    }
  }

  .property-header__top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 16px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .property-header__title {
    font-size: 1.5rem;
    font-weight: 700;
    color: $text-primary;
    margin: 0 0 8px 0;
    line-height: 1.3;
    letter-spacing: -0.01em;

    @media (min-width: 768px) {
      font-size: 1.75rem;
    }
  }

  .property-header__location {
    font-size: 1rem;
    color: $text-secondary;
    margin: 0;
  }

  .status-badge {
    display: inline-flex;
    padding: 6px 14px;
    background: #fef2f2;
    color: #991b1b;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    border-radius: 20px;
  }

  .property-header__info {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 32px;
    padding: 24px 0;
    border-top: 1px solid $border-light;
    border-bottom: 1px solid $border-light;

    @media (max-width: 640px) {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }
  }

  .price-block {
    min-width: 140px;
  }

  .price-block__value {
    display: block;
    font-size: 1.75rem;
    font-weight: 700;
    color: $accent-coral;
    line-height: 1.2;
    letter-spacing: -0.01em;

    @media (min-width: 768px) {
      font-size: 2rem;
    }
  }

  .price-block__label {
    display: block;
    font-size: 0.875rem;
    color: $text-muted;
    margin-top: 4px;
  }

  .features-block {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 8px;

    svg {
      width: 22px;
      height: 22px;
      color: $text-muted;
    }
  }

  .feature-item__value {
    font-size: 1.25rem;
    font-weight: 600;
    color: $text-primary;
  }

  .feature-item__label {
    font-size: 0.875rem;
    color: $text-muted;
  }

  .property-header__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 20px;
    font-size: 0.875rem;
    color: $text-secondary;

    span:not(:last-child)::after {
      content: 'â€¢';
      margin-left: 8px;
      color: $border-medium;
    }
  }

  // ========================================
  // CONTENT SECTIONS
  // ========================================

  .content-section {
    background: $bg-white;
    border-radius: $radius-lg;
    padding: 24px;
    box-shadow: $shadow-sm;

    @media (min-width: 768px) {
      padding: 32px;
    }
  }

  .content-section__title {
    font-size: 1.25rem;
    font-weight: 700;
    color: $text-primary;
    margin: 0 0 20px 0;
    padding-bottom: 16px;
    border-bottom: 1px solid $border-light;
  }

  .content-section__body {
    font-size: 1rem;
    color: $text-secondary;
    line-height: 1.7;
  }

  .prose {
    white-space: pre-line;
  }

  // ========================================
  // FEATURES GRID
  // ========================================

  .features-grid {
    display: grid;
